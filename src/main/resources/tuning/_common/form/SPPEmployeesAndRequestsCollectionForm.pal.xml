<?xml version='1.0' encoding='UTF-8'?>
<ui xmlns="http://www.intertrust.ru/schema/palette/tn-ui">
  <form schema-ref="SPPEmployeesAndRequestsCollection" id="SPPEmployeesAndRequestsCollectionForm" name="${ui.form.SPPEmployeesAndRequestsCollectionForm.name:Досье и заявки сотрудников организации}" projection="default" showtabs="true">
    <properties>
      <hide condition-union="AND">
        <negative-condition-ref ref="edit"/>
        <negative-condition-ref ref="read"/>
      </hide>
    </properties>
    <component>
      <section id="RootMenu" name="${ui.form.SPPEmployeesAndRequestsCollectionForm.section.RootMenu.name:RootEmplAndReqMenu}">
        <component>
          <button name="${ui.form.SPPEmployeesAndRequestsCollectionForm.section.RootMenu.button.Редактировать.name:Редактировать}">
            <properties>
              <hide condition-union="AND">
                <negative-condition-ref ref="AdminSOCollection_canEdit"/>
              </hide>
            </properties>
            <action position="4.0">
              <custom>
                <open-edit/>
              </custom>
            </action>
          </button>
          <button name="${ui.form.SPPEmployeesAndRequestsCollectionForm.section.RootMenu.button.Скрыть системную кнопку 'Добавить в избранное'.name:Скрыть системную кнопку 'Добавить в избранное'}">
            <properties>
              <hide condition-union="AND">
                <condition>true</condition>
              </hide>
            </properties>
            <action>
              <system name="ADD_LINK_TO_FAVORITE_FOLDER"/>
            </action>
          </button>
          <button name="${ui.form.SPPEmployeesAndRequestsCollectionForm.section.RootMenu.button.Скрыть системную кнопку 'Другое'.name:Скрыть системную кнопку 'Другое'}">
            <properties>
              <hide condition-union="AND">
                <condition>true</condition>
              </hide>
            </properties>
            <action>
              <system name="OTHER"/>
            </action>
          </button>
          <button name="${ui.form.SPPEmployeesAndRequestsCollectionForm.section.RootMenu.button.Скрыть системную кнопку 'Настройка'.name:Скрыть системную кнопку 'Настройка'}">
            <properties>
              <hide condition-union="AND">
                <condition>true</condition>
              </hide>
            </properties>
            <action>
              <system name="SETTINGS"/>
            </action>
          </button>
          <button name="${ui.form.SPPEmployeesAndRequestsCollectionForm.section.RootMenu.button.Скрыть системную кнопку 'Новой вкладке'.name:Скрыть системную кнопку 'Новой вкладке'}">
            <properties>
              <hide condition-union="AND">
                <condition>true</condition>
              </hide>
            </properties>
            <action>
              <system name="OPEN_IN_SEPARATE_TAB"/>
            </action>
          </button>
          <button name="${ui.form.SPPEmployeesAndRequestsCollectionForm.section.RootMenu.button.Скрыть системную кнопку 'Новом окне'.name:Скрыть системную кнопку 'Новом окне'}">
            <properties>
              <hide condition-union="AND">
                <condition>true</condition>
              </hide>
            </properties>
            <action>
              <system name="OPEN_IN_SEPARATE_WINDOW"/>
            </action>
          </button>
          <button name="${ui.form.SPPEmployeesAndRequestsCollectionForm.section.RootMenu.button.Скрыть системную кнопку 'Открыть в'.name:Скрыть системную кнопку 'Открыть в'}">
            <properties>
              <hide condition-union="AND">
                <condition>true</condition>
              </hide>
            </properties>
            <action>
              <system name="OPEN_IN"/>
            </action>
          </button>
          <section id="create" name="${ui.form.SPPEmployeesAndRequestsCollectionForm.section.RootMenu.section.create.name:Создать&amp;NoBreak;}">
            <properties>
              <hide condition-union="AND">
                <negative-condition-ref ref="AdminSOCollection_canEdit"/>
              </hide>
            </properties>
            <component>
              <button name="${ui.form.SPPEmployeesAndRequestsCollectionForm.section.RootMenu.section.create.button.Досье сотрудника.name:Досье сотрудника}">
                <action>
                  <custom>
                    <create-sibling schema-ref="SPPDossier"/>
                  </custom>
                </action>
              </button>
            </component>
          </section>
          <button name="${ui.form.SPPEmployeesAndRequestsCollectionForm.section.RootMenu.button.Объединить.name:Объединить}">
            <properties>
              <hide condition-union="AND">
                <negative-condition-ref ref="AdminSOCollection_canEdit"/>
              </hide>
            </properties>
            <action position="11.0">
              <custom>
                <operation>
                  <handler>
                    <script lang="JavaBean">JoinDossiers</script>
                  </handler>
                </operation>
              </custom>
            </action>
          </button>
          <button name="${ui.form.SPPEmployeesAndRequestsCollectionForm.section.RootMenu.button.Неактуально.name:Неактуально}">
            <properties>
              <hide condition-union="AND">
                <negative-condition-ref ref="AdminSOCollection_canEdit"/>
              </hide>
            </properties>
            <action position="10.0">
              <custom>
                <operation>
                  <handler>
                    <script lang="JavaBean">MakeSPPDossierNotActual</script>
                  </handler>
                </operation>
              </custom>
            </action>
          </button>
          <section id="deprecated" name="${ui.form.SPPEmployeesAndRequestsCollectionForm.section.RootMenu.section.deprecated.name:Устарело}">
            <properties>
              <hide condition-union="AND">
                <negative-condition-ref ref="AdminSOCollection_canEdit"/>
              </hide>
            </properties>
            <component>
              <button name="${ui.form.SPPEmployeesAndRequestsCollectionForm.section.RootMenu.section.deprecated.button.Выбрать досье.name:Выбрать досье}">
                <action position="10.0">
                  <custom>
                    <operation>
                      <handler>
                        <script lang="JavaBean">MarkSPPDossierAsDeprecated</script>
                      </handler>
                    </operation>
                  </custom>
                </action>
              </button>
              <button name="${ui.form.SPPEmployeesAndRequestsCollectionForm.section.RootMenu.section.deprecated.button.Создать новое досье.name:Создать новое досье}" alias="MarkSPPDossierAsDeprecatedNewDossier">
                <action>
                  <custom>
                    <create-sibling schema-ref="SPPDossier"/>
                  </custom>
                </action>
              </button>
            </component>
          </section>
          <button name="${ui.form.SPPEmployeesAndRequestsCollectionForm.section.RootMenu.button.Утвердить.name:Утвердить}">
            <properties>
              <hide condition-union="AND">
                <negative-condition-ref ref="AdminSOCollection_canEdit"/>
              </hide>
            </properties>
            <action>
              <custom>
                <operation>
                  <handler>
                    <script lang="JavaBean">ApproveZajavGroup</script>
                  </handler>
                </operation>
              </custom>
            </action>
          </button>
          <button name="${ui.form.SPPEmployeesAndRequestsCollectionForm.section.RootMenu.button.Удалить.name:Удалить}">
            <properties>
              <hide condition-union="AND">
                <negative-condition-ref ref="AdminSOCollection_canEdit"/>
              </hide>
            </properties>
            <action>
              <custom>
                <operation>
                  <handler>
                    <script lang="JavaBean">DeleteSPPDossierOperation</script>
                  </handler>
                </operation>
              </custom>
            </action>
          </button>
        </component>
      </section>
    </component>
  </form>
</ui>