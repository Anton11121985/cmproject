<?xml version='1.0' encoding='UTF-8'?>
<ui xmlns="http://www.intertrust.ru/schema/palette/tn-ui">
  <form schema-ref="LockerSignField" id="LockerSignFieldsTable" projection="default">
    <properties>
      <hide condition-union="AND">
        <negative-condition-ref ref="table"/>
      </hide>
    </properties>
    <component>
      <section id="signFieldLabel">
        <component>
          <field attribute-ref="label">
            <properties>
              <read-only condition-union="AND">
                <condition>true</condition>
              </read-only>
            </properties>
            <appearance align="left" multiline="true" importance="normal">
              <label-style field-width="30" field-unit="percent">
                <style id="tunBold"/>
                <style id="tunGray"/>
              </label-style>
              <field-style>
                <value-style>
                  <style id="tunBold"/>
                  <style id="tunGray"/>
                </value-style>
              </field-style>
            </appearance>
          </field>
        </component>
      </section>
      <section id="signFieldValue">
        <component>
          <field attribute-ref="displayValue">
            <properties>
              <read-only condition-union="AND">
                <condition>true</condition>
              </read-only>
            </properties>
            <appearance align="left" multiline="true" importance="normal">
              <label-style field-width="70" field-unit="percent"/>
            </appearance>
          </field>
        </component>
      </section>
    </component>
  </form>
</ui>