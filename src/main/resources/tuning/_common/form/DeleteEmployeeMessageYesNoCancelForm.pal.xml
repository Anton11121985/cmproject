              </read-only>
            </properties>
            <appearance importance="normal"/>
          </field>
        </component>
      </section>
      <button attribute-ref="needDeletePerson" name="${ui.form.DeleteEmployeeMessageYesNoCancelForm.button.needDeletePerson.name:Да}">
