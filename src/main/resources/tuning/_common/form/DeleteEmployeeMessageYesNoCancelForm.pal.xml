          <system name="submit"/>
        </action>
      </button>
      <button name="${ui.form.DeleteEmployeeMessageYesNoCancelForm.button.Отмена.name:Отмена}">
        <action>
          <system name="cancel"/>
        </action>
      </button>
    </component>
