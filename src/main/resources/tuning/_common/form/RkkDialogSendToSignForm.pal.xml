<?xml version='1.0' encoding='UTF-8'?>
<ui xmlns="http://www.intertrust.ru/schema/palette/tn-ui">
  <form schema-ref="RkkDialogSendToSign" id="RkkDialogSendToSignForm" name="${ui.form.RkkDialogSendToSignForm.name:Повторная отправка на подписание}" projection="default">
    <properties>
      <hide condition-union="AND">
        <negative-condition-ref ref="dialog"/>
      </hide>
    </properties>
    <component>
      <section id="row2" group="true">
        <properties>
          <read-only condition-union="AND">
            <condition>true</condition>
          </read-only>
        </properties>
        <appearance field-layout="horizontal"/>
        <component>
          <field attribute-ref="reason">
            <properties>
              <read-only condition-union="AND">
                <condition>true</condition>
              </read-only>
            </properties>
            <appearance align="left" importance="normal"/>
          </field>
        </component>
      </section>
      <section id="row1" group="true">
        <appearance field-layout="horizontal"/>
        <component>
          <field attribute-ref="commentText">
            <appearance importance="normal"/>
          </field>
        </component>
      </section>
      <section id="row3" group="true">
        <properties>
          <read-only condition-union="AND">
            <condition>true</condition>
          </read-only>
        </properties>
        <appearance field-layout="horizontal"/>
        <component>
          <field attribute-ref="warning">
            <properties>
              <read-only condition-union="AND">
                <condition>true</condition>
              </read-only>
            </properties>
            <appearance align="left" importance="normal">
              <label-style>
                <style id="tunRed"/>
              </label-style>
              <field-style>
                <value-style>
                  <style id="tunRed"/>
                </value-style>
              </field-style>
            </appearance>
          </field>
        </component>
      </section>
      <button name="${ui.form.RkkDialogSendToSignForm.button.Ок.name:Ок}">
        <action>
          <system name="submit"/>
        </action>
      </button>
      <button name="${ui.form.RkkDialogSendToSignForm.button.Отмена.name:Отмена}">
        <action>
          <system name="cancel"/>
        </action>
      </button>
    </component>
  </form>
</ui>