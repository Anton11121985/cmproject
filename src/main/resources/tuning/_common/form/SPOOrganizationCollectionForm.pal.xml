<?xml version='1.0' encoding='UTF-8'?>
<ui xmlns="http://www.intertrust.ru/schema/palette/tn-ui">
  <form schema-ref="SPOOrganizationCollection" id="SPOOrganizationCollectionForm" name="${ui.form.SPOOrganizationCollectionForm.name:Организации}" projection="default" showtabs="true">
    <properties>
      <hide condition-union="AND">
        <negative-condition-ref ref="edit"/>
        <negative-condition-ref ref="read"/>
      </hide>
    </properties>
    <component>
      <section id="RootMenu" name="${ui.form.SPOOrganizationCollectionForm.section.RootMenu.name:RootOrgMenu}">
        <component>
          <button name="${ui.form.SPOOrganizationCollectionForm.section.RootMenu.button.Утвердить.name:Утвердить}">
            <properties>
              <hide condition-union="AND">
                <negative-condition-ref ref="AdminSOCollection_canEdit"/>
              </hide>
            </properties>
            <action>
              <custom>
                <operation>
                  <handler>
                    <script lang="JavaBean">ApproveZajavGroup</script>
                  </handler>
                </operation>
              </custom>
            </action>
          </button>
          <button name="${ui.form.SPOOrganizationCollectionForm.section.RootMenu.button.Отклонить.name:Отклонить}">
            <action>
              <custom>
                <operation>
                  <handler>
                    <script lang="JavaBean">RejectAdjustment</script>
                  </handler>
                </operation>
              </custom>
            </action>
          </button>
          <section id="OTHER" name="${ui.form.SPOOrganizationCollectionForm.section.RootMenu.section.OTHER.name:Другое}">
            <component>
              <button name="${ui.form.SPOOrganizationCollectionForm.section.RootMenu.section.OTHER.button.Запомнить ссылку.name:Запомнить ссылку}">
                <action>
                  <system name="REMEMBER_LINK"/>
                </action>
              </button>
              <button name="${ui.form.SPOOrganizationCollectionForm.section.RootMenu.section.OTHER.button.Скрыть системную кнопку 'Добавить в избранное'.name:Скрыть системную кнопку 'Добавить в избранное'}">
                <properties>
                  <hide condition-union="AND">
                    <condition>true</condition>
                  </hide>
                </properties>
                <action>
                  <system name="ADD_LINK_TO_FAVORITE_FOLDER"/>
                </action>
              </button>
              <button name="${ui.form.SPOOrganizationCollectionForm.section.RootMenu.section.OTHER.button.Удалить.name:Удалить}">
                <properties>
                  <hide condition-union="AND">
                    <negative-condition-ref ref="AdminSOCollection_canEdit"/>
                  </hide>
                </properties>
                <action>
                  <custom>
                    <operation>
                      <handler>
                        <script lang="JavaBean">DeleteSPOOrganizationOperation</script>
                      </handler>
                    </operation>
                  </custom>
                </action>
              </button>
            </component>
          </section>
        </component>
      </section>
    </component>
  </form>
</ui>