<?xml version='1.0' encoding='UTF-8'?>
<ui xmlns="http://www.intertrust.ru/schema/palette/tn-ui">
  <form schema-ref="RkkTemplateResourceMissions" id="RkkTemplateResourceMissionsForm" projection="default" showtabs="true">
    <properties>
      <hide condition-union="AND">
        <negative-condition-ref ref="edit"/>
        <negative-condition-ref ref="read"/>
      </hide>
    </properties>
    <appearance widget="tabs"/>
    <component>
      <button name="${ui.form.RkkTemplateResourceMissionsForm.button.В корзину.name:В корзину}">
        <properties>
          <hide condition-union="AND">
            <negative-condition-ref ref="CanTrash"/>
          </hide>
        </properties>
        <hint-pop-up>${ui.form.RkkTemplateResourceMissionsForm.button.В корзину.hintPopUp:В корзину}</hint-pop-up>
        <action>
          <system name="http://intertrust.ru/cmj/relations#move.to.trash"/>
        </action>
      </button>
      <button name="${ui.form.RkkTemplateResourceMissionsForm.button.Восстановить.name:Восстановить}">
        <properties>
          <hide condition-union="AND">
            <negative-condition-ref ref="CanRestore"/>
          </hide>
        </properties>
        <hint-pop-up>${ui.form.RkkTemplateResourceMissionsForm.button.Восстановить.hintPopUp:Восстановить}</hint-pop-up>
        <action>
          <system name="http://intertrust.ru/cmj/relations#restore.from.trash"/>
        </action>
      </button>
      <button name="${ui.form.RkkTemplateResourceMissionsForm.button.Удалить.name:Удалить}">
        <properties>
          <hide condition-union="AND">
            <negative-condition-ref ref="CanDelete"/>
          </hide>
        </properties>
        <hint-pop-up>${ui.form.RkkTemplateResourceMissionsForm.button.Удалить.hintPopUp:Удалить}</hint-pop-up>
        <action>
          <system name="delete"/>
        </action>
      </button>
      <section id="Attributes" name="${ui.form.RkkTemplateResourceMissionsForm.section.Attributes.name:Реквизиты}">
        <component>
          <section id="linksAccessSection" group="true">
            <appearance>
              <label-style width="30" unit="symbol"/>
            </appearance>
            <component>
              <field attribute-ref="disableLinkAccess" name="${ui.form.RkkTemplateResourceMissionsForm.section.Attributes.section.linksAccessSection.field.disableLinkAccess.name:Ограничить доступ по связям:}">
                <appearance align="right" importance="normal">
                  <label-style field-width="2" field-unit="symbol"/>
                </appearance>
                <hint-in-field>${ui.form.RkkTemplateResourceMissionsForm.section.Attributes.section.linksAccessSection.field.disableLinkAccess.hintInField:Не дается доступ к текущему документу читателям связанных документов}</hint-in-field>
              </field>
            </component>
          </section>
          <section id="Main" name="${ui.form.RkkTemplateResourceMissionsForm.section.Attributes.section.Main.name:Основные}">
            <component>
              <field attribute-ref="category" name="${ui.form.RkkTemplateResourceMissionsForm.section.Attributes.section.Main.field.category.name:Тематика:}">
                <appearance importance="normal"/>
                <hint-pop-up>${ui.form.RkkTemplateResourceMissionsForm.section.Attributes.section.Main.field.category.hintPopUp:Тематика}</hint-pop-up>
              </field>
              <field autofill="true" recalc="true" attribute-ref="type" name="${ui.form.RkkTemplateResourceMissionsForm.section.Attributes.section.Main.field.type.name:Вид документа:}">
                <appearance importance="normal"/>
                <hint-pop-up>${ui.form.RkkTemplateResourceMissionsForm.section.Attributes.section.Main.field.type.hintPopUp:Вид документа}</hint-pop-up>
                <directories limit-livesearch="sys-current">
                  <directory-ref ref="kvid_Missions"/>
                </directories>
              </field>
              <field attribute-ref="title" name="${ui.form.RkkTemplateResourceMissionsForm.section.Attributes.section.Main.field.title.name:Заголовок:}">
                <appearance importance="normal"/>
                <hint-pop-up>${ui.form.RkkTemplateResourceMissionsForm.section.Attributes.section.Main.field.title.hintPopUp:Заголовок}</hint-pop-up>
                <directories manual-input="true" limit-livesearch="sys-current">
                  <directory-ref ref="subject"/>
                </directories>
              </field>
              <field recalc="true" attribute-ref="signature.signer" name="${ui.form.RkkTemplateResourceMissionsForm.section.Attributes.section.Main.field.signature.signer.name:Подпись:}">
                <properties>
                  <hide>
                    <condition-ref ref="RkkTemplate_hasMultipleSigners"/>
                  </hide>
                </properties>
                <appearance importance="normal">
                  <field-style group="true"/>
                </appearance>
                <hint-pop-up>${ui.form.RkkTemplateResourceMissionsForm.section.Attributes.section.Main.field.signature.signer.hintPopUp:Подпись}</hint-pop-up>
                <directories limit-livesearch="sys-current">
                  <directory-ref ref="CURRENT_SYS_HUMAN"/>
                  <directory-ref ref="CURRENT_SYS_HUMAN_Hierarchy"/>
                  <directory-ref ref="FV_FOREIGN_AND_CURR_HUMAN_HH"/>
                </directories>
              </field>
              <field attribute-ref="advSigner" name="${ui.form.RkkTemplateResourceMissionsForm.section.Attributes.section.Main.field.advSigner.name:Другие подписи:}">
                <properties>
                  <hide>
                    <condition-ref ref="RkkTemplate_hasMultipleSigners"/>
                  </hide>
                </properties>
                <appearance importance="normal"/>
                <hint-pop-up>${ui.form.RkkTemplateResourceMissionsForm.section.Attributes.section.Main.field.advSigner.hintPopUp:Другие подписи}</hint-pop-up>
                <directories limit-livesearch="sys-current">
                  <directory-ref ref="CURRENT_SYS_HUMAN"/>
                  <directory-ref ref="CURRENT_SYS_HUMAN_Hierarchy"/>
                  <directory-ref ref="FV_CURR_HUMAN_HH"/>
                </directories>
              </field>
              <field attribute-ref="signature.signers" name="${ui.form.Missions.signers:Подписи:}">
                <properties>
                  <hide>
                    <negative-condition-ref ref="RkkTemplate_hasMultipleSigners"/>
                  </hide>
                </properties>
                <appearance importance="normal"/>
                <directories limit-livesearch="sys-current">
                  <directory-ref ref="CURRENT_SYS_HUMAN"/>
                  <directory-ref ref="CURRENT_SYS_HUMAN_Hierarchy"/>
                  <directory-ref ref="FV_CURR_HUMAN_HH"/>
                </directories>
              </field>
              <field attribute-ref="executor" name="${ui.form.RkkTemplateResourceMissionsForm.section.Attributes.section.Main.field.executor.name:Исполнители:}">
                <appearance importance="normal"/>
                <hint-pop-up>${ui.form.RkkTemplateResourceMissionsForm.section.Attributes.section.Main.field.executor.hintPopUp:Исполнители}</hint-pop-up>
                <directories limit-livesearch="sys-current">
                  <directory-ref ref="CURRENT_SYS_HUMAN"/>
                  <directory-ref ref="CURRENT_SYS_HUMAN_Hierarchy"/>
                  <directory-ref ref="FV_CURR_HUMAN_HH"/>
                  <directory-ref ref="sys_roles"/>
                </directories>
              </field>
              <field attribute-ref="addressee" name="${ui.form.RkkTemplateResourceMissionsForm.section.Attributes.section.Main.field.addressee.name:Список рассылки:}">
                <appearance importance="normal">
                  <field-style group="true"/>
                </appearance>
                <hint-pop-up>${ui.form.RkkTemplateResourceMissionsForm.section.Attributes.section.Main.field.addressee.hintPopUp:Список рассылки}</hint-pop-up>
                <directories limit-livesearch="sys-current">
                  <directory-ref ref="CURRENT_ORG_DEP_HUMAN_HH"/>
                  <directory-ref ref="CURRENT_ORG_DEP_HUMAN_HH_HIER"/>
                  <directory-ref ref="AlienBeards"/>
                  <directory-ref ref="sys_roles"/>
                  <directory-ref ref="sendlist"/>
                  <directory-ref ref="FV_CURR_ALL_FOREIGN_HUMAN_HH_DEP_ORG"/>
                </directories>
              </field>
            </component>
          </section>
          <section id="Additional" name="${ui.form.RkkTemplateResourceMissionsForm.section.Attributes.section.Additional.name:Дополнительные}">
            <component>
              <field recalc="true" attribute-ref="registration.place" name="${ui.form.RkkTemplateResourceMissionsForm.section.Attributes.section.Additional.field.registration.place.name:Место регистрации:}">
                <appearance importance="normal"/>
                <hint-pop-up>${ui.form.RkkTemplateResourceMissionsForm.section.Attributes.section.Additional.field.registration.place.hintPopUp:Место регистрации}</hint-pop-up>
                <directories livesearch="true" limit-livesearch="sys-current">
                  <directory-ref ref="CURRENT_SYS_DEP"/>
                  <directory-ref ref="CURRENT_SYS_DEP_HIER"/>
                  <directory-ref ref="FV_CURR_HH_DEP_ORG"/>
                </directories>
              </field>
              <field attribute-ref="idauthorRegT" name="${ui.form.RkkTemplateResourceMissionsForm.section.Attributes.section.Additional.field.idauthorRegT.name:Регистратор для WF:}">
                <properties>
                  <hide condition-union="AND">
                    <condition>true</condition>
                  </hide>
                </properties>
                <appearance importance="normal"/>
                <directories limit-livesearch="sys-current">
                  <directory-ref ref="CURRENT_SYS_HUMAN"/>
                </directories>
              </field>
              <field attribute-ref="approvingTemplate" name="${ui.form.RkkTemplateResourceMissionsForm.section.Attributes.section.Additional.field.approvingTemplate.name:Шаблон согласования:}">
                <appearance importance="normal"/>
                <directories livesearch="true" limit-livesearch="sys-current">
                  <directory-ref ref="Templates-Approving-List"/>
                  <directory-ref ref="Favourites-Templates-Approving-List"/>
                </directories>
              </field>
            </component>
          </section>
        </component>
      </section>
      <section id="Header">
        <component>
          <section id="row1" group="true">
            <appearance field-layout="horizontal"/>
            <component>
              <field attribute-ref="showTemplate">
                <properties>
                  <read-only condition-union="AND">
                    <condition>true</condition>
                  </read-only>
                </properties>
                <appearance align="left">
                  <label-style field-width="18" field-unit="symbol"/>
                  <alt-appearancies>
                    <alt-appearance>
                      <appearance-ref ref="css_headerElementWithIcon"/>
                      <enable condition-union="AND">
                        <condition>true</condition>
                      </enable>
                    </alt-appearance>
                  </alt-appearancies>
                </appearance>
              </field>
              <field attribute-ref="accessInfo">
                <properties>
                  <read-only condition-union="AND">
                    <condition>true</condition>
                  </read-only>
                </properties>
                <appearance align="left">
                  <alt-appearancies>
                    <alt-appearance>
                      <appearance-ref ref="css_icon_lock"/>
                      <enable condition-union="AND">
                        <condition-ref ref="rkkTemplateIsNotPublic"/>
                      </enable>
                    </alt-appearance>
                    <alt-appearance>
                      <appearance-ref ref="css_icon_unlock"/>
                      <enable condition-union="AND">
                        <condition-ref ref="rkkTemplateIsPublic"/>
                      </enable>
                    </alt-appearance>
                  </alt-appearancies>
                </appearance>
              </field>
            </component>
          </section>
          <field attribute-ref="showTemplateName">
            <properties>
              <read-only condition-union="AND">
                <condition>true</condition>
              </read-only>
            </properties>
          </field>
          <field attribute-ref="$titleHeader">
            <properties>
              <require condition-union="AND">
                <condition>true</condition>
              </require>
            </properties>
            <hint-in-field>${ui.form.RkkTemplateResourceMissionsForm.section.Header.field.titleHeader.hintInField:Введите название шаблона}</hint-in-field>
          </field>
        </component>
      </section>
      <section id="Content" name="${ui.form.RkkTemplateResourceMissionsForm.section.Content.name:Содержание}"/>
      <section id="AccessType" name="${ui.form.RkkTemplateResourceMissionsForm.section.AccessType.name:Доступ}">
        <component>
          <field recalc="true" attribute-ref="accessType">
            <appearance widget="radio">
              <label-style>
                <style id="tunVertical"/>
              </label-style>
              <field-style>
                <value-style>
                  <style id="tunVertical"/>
                </value-style>
              </field-style>
            </appearance>
            <directories limit-livesearch="sys-current">
              <directory-ref ref="accessType"/>
            </directories>
          </field>
          <field attribute-ref="acl" name="${ui.form.RkkTemplateResourceMissionsForm.section.AccessType.field.acl.name:Индивидуально:}">
            <properties>
              <hide condition-union="AND">
                <negative-condition-ref ref="rkkTemplateIsFavourites"/>
              </hide>
            </properties>
            <appearance importance="normal"/>
            <directories limit-livesearch="sys-current">
              <directory-ref ref="CURRENT_HH_ROLE_HUMAN"/>
              <directory-ref ref="CURRENT_HH_ROLE_HUMAN_HIER"/>
              <directory-ref ref="sys_roles"/>
              <directory-ref ref="FV_CURR_HUMAN_HH_ROLE"/>
            </directories>
          </field>
          <field clickable="true" attribute-ref="departmentAccess">
            <properties>
              <hide condition-union="AND">
                <negative-condition-ref ref="rkkTemplateIsFavourites"/>
              </hide>
            </properties>
            <appearance location="table" importance="normal" clickable="true"/>
          </field>
        </component>
      </section>
      <section id="Links" name="${ui.form.RkkTemplateResourceMissionsForm.section.Links.name:Связанные}">
        <appearance widget="leftMenu"/>
        <component>
          <section id="Files" name="${ui.form.RkkTemplateResourceMissionsForm.section.Links.section.Files.name:Дела}"/>
        </component>
      </section>
    </component>
  </form>
</ui>