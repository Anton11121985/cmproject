<?xml version='1.0' encoding='UTF-8'?>
<ui xmlns="http://www.intertrust.ru/schema/palette/tn-ui">
    <form schema-ref="MoveToArchiveDialog" id="MoveToArchiveDialogForm" name="${ui.form.MoveToArchiveDialogForm.name:Передача в архив}" projection="default">
        <properties>
            <hide condition-union="AND">
                <negative-condition-ref ref="dialog"/>
            </hide>
        </properties>
        <component>
            <field attribute-ref="comment" name="${ui.form.MoveToArchiveDialogForm.field.comment.name:Комментарий:}">
                <appearance importance="normal"/>
            </field>
            <button name="${ui.form.MoveToArchiveDialogForm.button.OK.name:OK}" alias="OK">
                <action>
                    <system name="submit"/>
                </action>
            </button>
            <button name="${ui.form.MoveToArchiveDialogForm.button.Отмена.name:Отмена}">
                <action>
                    <system name="cancel"/>
                </action>
            </button>
        </component>
    </form>
</ui>