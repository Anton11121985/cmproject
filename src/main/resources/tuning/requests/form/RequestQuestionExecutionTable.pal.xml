<?xml version='1.0' encoding='UTF-8'?>
<ui xmlns="http://www.intertrust.ru/schema/palette/tn-ui">
  <form schema-ref="RequestQuestionExecution" id="RequestQuestionExecutionTable" projection="default">
    <properties>
      <hide condition-union="AND">
        <negative-condition-ref ref="table"/>
      </hide>
    </properties>
    <component>
      <section id="colQuestion" name="${ui.form.RequestQuestionExecutionTable.section.colQuestion.name:Вопрос}">
        <component>
          <field attribute-ref="questionValue">
            <appearance importance="normal"/>
          </field>
        </component>
      </section>
      <section id="colReviewResult" name="${ui.form.RequestQuestionExecutionTable.section.colReviewResult.name:Результат рассмотрения}">
        <component>
          <field attribute-ref="reviewResult">
            <appearance importance="normal"/>
          </field>
        </component>
      </section>
      <section id="colMeasuresTaken" name="${ui.form.RequestQuestionExecutionTable.section.colMeasuresTaken.name:Меры приняты}">
        <component>
          <field attribute-ref="measuresTaken">
            <appearance importance="normal"/>
            <directories limit-livesearch="sys-current">
              <directory-ref ref="YesNo"/>
            </directories>
          </field>
        </component>
      </section>
      <section id="colReplyDate" name="${ui.form.RequestQuestionExecutionTable.section.colReplyDate.name:Дата ответа - СКРЫТО}">
        <properties>
          <hide condition-union="AND">
            <negative-condition-ref ref="email"/>
          </hide>
        </properties>
        <component>
          <field attribute-ref="replyDate">
            <appearance importance="normal"/>
          </field>
        </component>
      </section>
      <section id="colReplyDoc" name="${ui.form.RequestQuestionExecutionTable.section.colReplyDoc.name:№ и дата ответа/направления}">
        <component>
          <field clickable="true" attribute-ref="resultDoc">
            <appearance importance="normal" clickable="true"/>
          </field>
        </component>
      </section>
      <section id="colRedirect" name="${ui.form.RequestQuestionExecutionTable.section.colRedirect.name:Кому направлено}">
        <component>
          <field attribute-ref="resultDoc.org">
            <appearance importance="normal"/>
          </field>
        </component>
      </section>
      <button alias="edit">
        <appearance align="right">
          <label-style width="1" unit="symbol">
            <style id="tunIconEdit"/>
          </label-style>
        </appearance>
        <action>
          <system name="update"/>
        </action>
      </button>
    </component>
  </form>
</ui>