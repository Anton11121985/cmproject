<?xml version='1.0' encoding='UTF-8'?>
<ui xmlns="http://www.intertrust.ru/schema/palette/tn-ui">
  <form schema-ref="ReviewReplyResource" id="ReviewReplyResourceReadForm" projection="default">
    <properties>
      <hide condition-union="AND">
        <negative-condition-ref ref="read"/>
      </hide>
    </properties>
    <component>
      <section id="Contents" group="true">
        <appearance field-layout="vertical"/>
        <component>
          <field attribute-ref="comment">
            <appearance importance="normal"/>
            <hint-pop-up>${ui.form.ReviewReplyResourceReadForm.section.Contents.field.comment.hintPopUp:Комментарий}</hint-pop-up>
          </field>
          <field attribute-ref="$discussions">
            <appearance importance="normal"/>
            <hint-pop-up>${ui.form.ReviewReplyResourceReadForm.section.Contents.field.discussions.hintPopUp:Обсуждение}</hint-pop-up>
          </field>
        </component>
      </section>
    </component>
  </form>
</ui>