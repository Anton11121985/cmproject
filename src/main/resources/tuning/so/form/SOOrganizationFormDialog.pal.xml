<?xml version='1.0' encoding='UTF-8'?>
<ui xmlns="http://www.intertrust.ru/schema/palette/tn-ui">
  <form schema-ref="SOOrganization" id="SOOrganizationFormDialog" name="${ui.form.SOOrganizationFormDialog.name:Организация}" projection="default">
    <properties>
      <hide condition-union="AND">
        <negative-condition-ref ref="dialog"/>
      </hide>
    </properties>
    <component>
      <button name="${ui.form.SOOrganizationFormDialog.button.Скрыть системную кнопку Изменить (для объектов админки работает некорректно).name:Скрыть системную кнопку Изменить (для объектов админки работает некорректно)}">
        <properties>
          <hide condition-union="AND">
            <condition>true</condition>
          </hide>
        </properties>
        <action>
          <system name="update"/>
        </action>
      </button>
      <field attribute-ref="shortname" name="${ui.form.SOOrganizationFormDialog.field.shortname.name:Краткое название:}">
        <properties>
          <read-only condition-union="AND">
            <condition>true</condition>
          </read-only>
        </properties>
        <appearance align="left" importance="normal"/>
      </field>
      <button name="${ui.form.SOOrganizationFormDialog.button.Скрыть системную кнопку системную Отменить (для объектов админки работает некорректно).name:Скрыть системную кнопку системную Отменить (для объектов админки работает некорректно)}">
        <properties>
          <hide condition-union="AND">
            <condition>true</condition>
          </hide>
        </properties>
        <action>
          <system name="cancel"/>
        </action>
      </button>
      <field attribute-ref="phone" name="${ui.form.SOOrganizationFormDialog.field.phone.name:Телефон:}">
        <properties>
          <read-only condition-union="AND">
            <condition>true</condition>
          </read-only>
        </properties>
        <appearance align="left" importance="normal"/>
      </field>
      <field attribute-ref="jAddressShow" name="${ui.form.SOOrganizationFormDialog.field.jAddressShow.name:Адрес:}">
        <properties>
          <read-only condition-union="AND">
            <condition>true</condition>
          </read-only>
        </properties>
        <appearance align="left" importance="normal"/>
      </field>
      <field attribute-ref="headInfo" name="${ui.form.SOOrganizationFormDialog.field.headInfo.name:Руководитель:}">
        <properties>
          <read-only condition-union="AND">
            <condition>true</condition>
          </read-only>
        </properties>
        <appearance importance="normal"/>
      </field>
      <field attribute-ref="selfHyperLink">
        <properties>
          <read-only condition-union="AND">
            <condition>true</condition>
          </read-only>
        </properties>
        <appearance importance="normal"/>
      </field>
    </component>
  </form>
</ui>