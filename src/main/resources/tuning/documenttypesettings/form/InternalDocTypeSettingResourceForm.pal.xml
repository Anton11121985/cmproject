<?xml version='1.0' encoding='UTF-8'?>
<ui xmlns="http://www.intertrust.ru/schema/palette/tn-ui">
  <form schema-ref="InternalDocTypeSettingResource" id="InternalDocTypeSettingResourceForm" name="${ui.form.InternalDocTypeSettingResourceForm.name:InternalDocTypeSettingResourceForm}" projection="default" showtabs="true">
    <properties>
      <hide condition-union="AND">
        <negative-condition-ref ref="edit"/>
        <negative-condition-ref ref="read"/>
      </hide>
    </properties>
    <component>
      <section id="Header">
        <component>
          <section id="row1" group="true">
            <appearance field-layout="horizontal"/>
            <component>
              <field attribute-ref="showIdent">
                <properties>
                  <read-only condition-union="AND">
                    <condition>true</condition>
                  </read-only>
                </properties>
                <appearance align="left" importance="normal">
                  <label-style field-width="30" field-unit="symbol"/>
                </appearance>
              </field>
              <field attribute-ref="dbType">
                <properties>
                  <read-only condition-union="AND">
                    <condition>true</condition>
                  </read-only>
                </properties>
                <appearance importance="normal"/>
                <directories manual-input="true" limit-livesearch="sys-current">
                  <directory-ref ref="moduleType"/>
                </directories>
              </field>
              <field attribute-ref="complect" name="${ui.form.InternalDocTypeSettingResourceForm.section.Header.section.row1.field.complect.name:Комплект}">
                <appearance align="left" importance="normal">
                  <label-style field-width="20" field-unit="symbol"/>
                </appearance>
                <hint-in-field>${ui.form.InternalDocTypeSettingResourceForm.section.Header.section.row1.field.complect.hintInField:не указан}</hint-in-field>
              </field>
              <field attribute-ref="metText">
                <properties>
                  <read-only condition-union="AND">
                    <condition>true</condition>
                  </read-only>
                  <hide condition-union="AND">
                    <negative-condition-ref ref="DocTypeSettingResource_isMet"/>
                  </hide>
                </properties>
                <appearance align="right" importance="normal">
                  <label-style field-width="8" field-unit="symbol"/>
                </appearance>
              </field>
              <field attribute-ref="met_date">
                <properties>
                  <read-only condition-union="AND">
                    <condition>true</condition>
                  </read-only>
                  <hide condition-union="AND">
                    <negative-condition-ref ref="DocTypeSettingResource_isMet"/>
                  </hide>
                </properties>
                <appearance align="right" importance="normal">
                  <label-style field-width="16" field-unit="symbol"/>
                  <field-style date-format="dd.MM.yyyy"/>
                </appearance>
              </field>
              <field attribute-ref="met_who">
                <properties>
                  <read-only condition-union="AND">
                    <condition>true</condition>
                  </read-only>
                  <hide condition-union="AND">
                    <negative-condition-ref ref="DocTypeSettingResource_isMet"/>
                  </hide>
                </properties>
                <appearance align="left" importance="normal">
                  <label-style field-width="20" field-unit="symbol"/>
                </appearance>
              </field>
            </component>
          </section>
          <section id="row2" group="true">
            <component>
              <field attribute-ref="title">
                <properties>
                  <require condition-union="AND">
                    <condition>true</condition>
                  </require>
                  <hide condition-union="AND">
                    <negative-condition-ref ref="edit"/>
                  </hide>
                </properties>
                <appearance importance="normal"/>
                <hint-pop-up>${ui.form.InternalDocTypeSettingResourceForm.section.Header.section.row2.field.title.hintPopUp:Введите заголовок}</hint-pop-up>
                <hint-in-field>${ui.form.InternalDocTypeSettingResourceForm.section.Header.section.row2.field.title.hintInField:Введите заголовок}</hint-in-field>
              </field>
              <field attribute-ref="title">
                <properties>
                  <hide condition-union="AND">
                    <negative-condition-ref ref="read"/>
                  </hide>
                </properties>
                <appearance importance="normal">
                  <label-style>
                    <style id="tunFontSize14"/>
                    <style id="tunClickableUnderline"/>
                  </label-style>
                  <field-style>
                    <value-style>
                      <style id="tunFontSize14"/>
                      <style id="tunClickableUnderline"/>
                    </value-style>
                  </field-style>
                </appearance>
              </field>
            </component>
          </section>
        </component>
      </section>
      <section id="AccessDocs" name="${ui.form.InternalDocTypeSettingResourceForm.section.AccessDocs.name:Доступ}">
        <component>
          <field attribute-ref="accessListTitle">
            <properties>
              <read-only condition-union="AND">
                <condition>true</condition>
              </read-only>
              <hide condition-union="AND">
                <negative-condition-ref ref="DocTypeSettingResource_accessList_isNull"/>
              </hide>
            </properties>
            <appearance importance="normal"/>
          </field>
          <section id="accessListSection" group="true">
            <properties>
              <hide condition-union="AND">
                <condition-ref ref="DocTypeSettingResource_accessList_isNull"/>
              </hide>
            </properties>
            <component>
              <field attribute-ref="accessListTitle">
                <properties>
                  <read-only condition-union="AND">
                    <condition>true</condition>
                  </read-only>
                  <hide condition-union="AND">
                    <condition-ref ref="edit"/>
                  </hide>
                </properties>
                <appearance importance="normal"/>
              </field>
              <field attribute-ref="accessListTitle_readOnly">
                <properties>
                  <hide condition-union="AND">
                    <negative-condition-ref ref="edit"/>
                  </hide>
                  <read-only condition-union="AND">
                    <condition>true</condition>
                  </read-only>
                </properties>
              </field>
              <field clickable="true" attribute-ref="accessList" recalc="true">
                <properties>
                  <hide condition-union="AND">
                    <condition-ref ref="edit"/>
                  </hide>
                </properties>
                <appearance location="table" open-mode="EmbeddedView" digest-mode="EmbeddedView" importance="normal" clickable="true" widget="EmbeddedView"/>
              </field>
              <field clickable="true" attribute-ref="accessListReadOnly">
                <properties>
                  <hide condition-union="AND">
                    <negative-condition-ref ref="edit"/>
                  </hide>
                </properties>
                <appearance location="table" open-mode="EmbeddedView" digest-mode="EmbeddedView" importance="normal" clickable="true" widget="EmbeddedView"/>
              </field>
            </component>
          </section>
        </component>
      </section>
      <section id="History" name="${ui.form.InternalDocTypeSettingResourceForm.section.History.name:История}"/>
      <section id="RootMenu">
        <component>
          <button name="${ui.form.InternalDocTypeSettingResourceForm.section.RootMenu.button.Скрыть системную кнопку Сохранить.name:Скрыть системную кнопку Сохранить}">
            <properties>
              <hide condition-union="AND">
                <condition>true</condition>
              </hide>
            </properties>
            <action>
              <system name="SAVE"/>
            </action>
          </button>
          <button name="${ui.form.InternalDocTypeSettingResourceForm.section.RootMenu.button.Сохранить.name:Сохранить}">
            <properties>
              <hide condition-union="AND">
                <negative-condition-ref ref="DocTypeSettingResource_isNew"/>
              </hide>
            </properties>
            <action>
              <custom>
                <save/>
              </custom>
            </action>
          </button>
          <button name="${ui.form.InternalDocTypeSettingResourceForm.section.RootMenu.button.Сохранить.name:Сохранить}">
            <properties>
              <hide condition-union="AND">
                <negative-condition-ref ref="DocTypeSettingResource_isSaveNotNew"/>
              </hide>
            </properties>
            <action>
              <custom>
                <save-existing/>
              </custom>
            </action>
          </button>
          <button name="${ui.form.InternalDocTypeSettingResourceForm.section.RootMenu.button.Новый как копия.name:Новый как копия}" alias="createNewAsCopy">
            <properties>
              <hide condition-union="AND">
                <negative-condition-ref ref="DocTypeSettingResource_isCreateNewAsCopy"/>
              </hide>
            </properties>
            <action>
              <custom>
                <create schema-ref="InternalDocTypeSettingResource">
                  <module ident="DocumentTypeSettings" complect=""/>
                </create>
              </custom>
            </action>
          </button>
          <section id="OTHER" name="${ui.form.InternalDocTypeSettingResourceForm.section.RootMenu.section.OTHER.name:Другое}">
            <component>
              <button name="${ui.form.InternalDocTypeSettingResourceForm.section.RootMenu.section.OTHER.button.Удалить.name:Удалить}">
                <properties>
                  <hide condition-union="AND">
                    <negative-condition-ref ref="DocTypeSettingResource_isNotMet"/>
                  </hide>
                </properties>
                <action>
                  <custom>
                    <operation>
                      <handler>
                        <script lang="JavaBean">DeleteDocTypeSettingOperation</script>
                      </handler>
                    </operation>
                  </custom>
                </action>
              </button>
            </component>
          </section>
        </component>
      </section>
    </component>
  </form>
</ui>