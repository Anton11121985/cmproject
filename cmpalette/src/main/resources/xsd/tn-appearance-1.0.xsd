<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" attributeFormDefault="unqualified" elementFormDefault="qualified">

    <!--Виджеты-->
    <xs:include schemaLocation="tn-widgets-1.0.xsd">
        <xs:annotation>
            <xs:documentation><![CDATA[Виджеты]]></xs:documentation>
        </xs:annotation>
    </xs:include>

    <!--Стили-->
    <xs:include schemaLocation="tn-styles-1.0.xsd">
        <xs:annotation>
            <xs:documentation><![CDATA[Стили]]></xs:documentation>
        </xs:annotation>
    </xs:include>

    <!--Тип действий-->
    <xs:include schemaLocation="tn-action-types-1.0.xsd">
        <xs:annotation>
            <xs:documentation><![CDATA[Тип действий]]></xs:documentation>
        </xs:annotation>
    </xs:include>

    <!-- Доп. информация -->
    <xs:complexType name="metaAppearanceType">
        <xs:annotation>
            <xs:documentation><![CDATA[Доп. информация для разработчика]]></xs:documentation>
        </xs:annotation>
        <xs:all>
            <xs:element name="category" minOccurs="0">
                <xs:annotation>
                    <xs:documentation><![CDATA[Категория]]></xs:documentation>
                </xs:annotation>
                <xs:complexType>
                    <xs:attribute type="xs:string" name="name" use="required">
                        <xs:annotation>
                            <xs:documentation><![CDATA[Название категории]]></xs:documentation>
                        </xs:annotation>
                    </xs:attribute>
                </xs:complexType>
            </xs:element>
            <xs:element name="documentation" type="xs:string">
                <xs:annotation>
                    <xs:documentation><![CDATA[Комментарий]]></xs:documentation>
                </xs:annotation>
            </xs:element>
        </xs:all>
    </xs:complexType>

    <!--Стиль надписи -->
    <xs:simpleType name="labelListStyleNameType">
        <xs:union memberTypes="styleFontType styleBgType xs:string"/>
    </xs:simpleType>

    <xs:complexType name="labelStyleNameType">
        <xs:annotation>
            <xs:documentation><![CDATA[Стиль]]></xs:documentation>
        </xs:annotation>
        <xs:attribute name="id" type="labelListStyleNameType" use="required">
            <xs:annotation>
                <xs:documentation><![CDATA[Идентификатор стиля]]></xs:documentation>
            </xs:annotation>
        </xs:attribute>
    </xs:complexType>

    <!--Стиль формы -->
    <xs:simpleType name="formListStyleNameType">
        <xs:union memberTypes="styleFormType xs:string"/>
    </xs:simpleType>

    <xs:complexType name="formStyleNameType">
        <xs:annotation>
            <xs:documentation><![CDATA[Стиль]]></xs:documentation>
        </xs:annotation>
        <xs:attribute name="id" type="formListStyleNameType" use="required">
            <xs:annotation>
                <xs:documentation><![CDATA[Идентификатор стиля]]></xs:documentation>
            </xs:annotation>
        </xs:attribute>
    </xs:complexType>

    <!--Стиль секции -->
    <xs:simpleType name="sectionListStyleNameType">
        <xs:union memberTypes="styleSectionType styleBgType xs:string"/>
    </xs:simpleType>

    <xs:complexType name="sectionStyleNameType">
        <xs:annotation>
            <xs:documentation><![CDATA[Стиль]]></xs:documentation>
        </xs:annotation>
        <xs:attribute name="id" type="sectionListStyleNameType" use="required">
            <xs:annotation>
                <xs:documentation><![CDATA[Идентификатор стиля]]></xs:documentation>
            </xs:annotation>
        </xs:attribute>
    </xs:complexType>

    <!--Стиль кнопки -->
    <xs:simpleType name="buttonListStyleNameType">
        <xs:union memberTypes="styleFontType styleBgType styleBtnType styleIconType xs:string"/>
    </xs:simpleType>

    <xs:complexType name="buttonStyleNameType">
        <xs:annotation>
            <xs:documentation><![CDATA[Стиль]]></xs:documentation>
        </xs:annotation>
        <xs:attribute name="id" type="buttonListStyleNameType" use="required">
            <xs:annotation>
                <xs:documentation><![CDATA[Идентификатор стиля]]></xs:documentation>
            </xs:annotation>
        </xs:attribute>
    </xs:complexType>

    <!--Стиль поля -->
    <xs:simpleType name="fieldListStyleNameType">
        <xs:union memberTypes="styleFontType styleBgType styleFieldType xs:string"/>
    </xs:simpleType>

    <xs:complexType name="fieldStyleNameType">
        <xs:annotation>
            <xs:documentation><![CDATA[Стиль]]></xs:documentation>
        </xs:annotation>
        <xs:attribute name="id" type="fieldListStyleNameType" use="required">
            <xs:annotation>
                <xs:documentation><![CDATA[Идентификатор стиля]]></xs:documentation>
            </xs:annotation>
        </xs:attribute>
    </xs:complexType>

    <!--Стили поля -->
    <xs:complexType name="fieldStylesType">
        <xs:annotation>
            <xs:documentation><![CDATA[Стили]]></xs:documentation>
        </xs:annotation>
        <xs:sequence>
            <xs:element name="style" type="fieldStyleNameType" minOccurs="1" maxOccurs="unbounded">
                <xs:annotation>
                    <xs:documentation><![CDATA[Идентификатор стиля]]></xs:documentation>
                </xs:annotation>
            </xs:element>
        </xs:sequence>
        <xs:attribute name="value" type="xs:string" use="optional">
            <xs:annotation>
                <xs:documentation><![CDATA[Значение в поле, к которому применяется стиль]]></xs:documentation>
            </xs:annotation>
        </xs:attribute>
    </xs:complexType>

    <!-- Параметры визуализации: Секция/Форма-->
    <!-- Параметры диалога -->
    <xs:complexType name="dialogModeType">
        <xs:annotation>
            <xs:documentation><![CDATA[Размеры диалога]]></xs:documentation>
        </xs:annotation>
        <xs:attribute name="height" type="xs:integer" use="optional">
            <xs:annotation>
                <xs:documentation><![CDATA[Высота]]></xs:documentation>
            </xs:annotation>
        </xs:attribute>
        <xs:attribute name="width" type="xs:integer" use="optional">
            <xs:annotation>
                <xs:documentation><![CDATA[Ширина]]></xs:documentation>
            </xs:annotation>
        </xs:attribute>
        <xs:attribute name="unit" use="optional" default="symbol">
            <xs:annotation>
                <xs:documentation><![CDATA[Единица измерения]]></xs:documentation>
            </xs:annotation>
            <xs:simpleType>
                <xs:restriction base="xs:string">
                    <xs:enumeration value="percent">
                        <xs:annotation>
                            <xs:documentation><![CDATA[Проценты]]></xs:documentation>
                        </xs:annotation>
                    </xs:enumeration>
                    <xs:enumeration value="symbol">
                        <xs:annotation>
                            <xs:documentation><![CDATA[Символы]]></xs:documentation>
                        </xs:annotation>
                    </xs:enumeration>
                    <xs:enumeration value="px">
                        <xs:annotation>
                            <xs:documentation><![CDATA[Пиксели]]></xs:documentation>
                        </xs:annotation>
                    </xs:enumeration>
                </xs:restriction>
            </xs:simpleType>
        </xs:attribute>
    </xs:complexType>

    <!-- Размеры секции -->
    <xs:complexType name="sizeSectionType">
        <xs:annotation>
            <xs:documentation><![CDATA[Размеры секции]]></xs:documentation>
        </xs:annotation>
        <xs:attribute name="height" type="xs:integer" use="optional">
            <xs:annotation>
                <xs:documentation><![CDATA[Высота]]></xs:documentation>
            </xs:annotation>
        </xs:attribute>
        <xs:attribute name="width" type="xs:integer" use="optional">
            <xs:annotation>
                <xs:documentation><![CDATA[Ширина]]></xs:documentation>
            </xs:annotation>
        </xs:attribute>
        <xs:attribute name="unit" use="optional" default="symbol">
            <xs:annotation>
                <xs:documentation><![CDATA[Единица измерения]]></xs:documentation>
            </xs:annotation>
            <xs:simpleType>
                <xs:restriction base="xs:string">
                    <xs:enumeration value="percent">
                        <xs:annotation>
                            <xs:documentation><![CDATA[Проценты]]></xs:documentation>
                        </xs:annotation>
                    </xs:enumeration>
                    <xs:enumeration value="symbol">
                        <xs:annotation>
                            <xs:documentation><![CDATA[Символы]]></xs:documentation>
                        </xs:annotation>
                    </xs:enumeration>
                    <xs:enumeration value="px">
                        <xs:annotation>
                            <xs:documentation><![CDATA[Пиксели]]></xs:documentation>
                        </xs:annotation>
                    </xs:enumeration>
                </xs:restriction>
            </xs:simpleType>
        </xs:attribute>
    </xs:complexType>

    <!-- Параметры визуализации для формы  -->
    <xs:attributeGroup name="attributeGroupFormAppearance">
        <xs:attribute name="field-layout" use="optional" default="vertical">
            <xs:annotation>
                <xs:documentation><![CDATA[Расположение полей]]></xs:documentation>
            </xs:annotation>
            <xs:simpleType>
                <xs:restriction base="xs:string">
                    <xs:enumeration value="vertical">
                        <xs:annotation>
                            <xs:documentation>
                                <![CDATA[Вертикальное расположение. Поля располагаются вертикально в один столбец]]></xs:documentation>
                        </xs:annotation>
                    </xs:enumeration>
                    <xs:enumeration value="horizontal">
                        <xs:annotation>
                            <xs:documentation>
                                <![CDATA[Горизонтальное расположение. Поля располагаются горизонтально в одной строке]]></xs:documentation>
                        </xs:annotation>
                    </xs:enumeration>
                </xs:restriction>
            </xs:simpleType>
        </xs:attribute>
        <xs:attribute name="turn" type="xs:boolean" use="optional" default="false">
            <xs:annotation>
                <xs:documentation>
                    <![CDATA[Свернутость. Определяет отображение Секции при открытии или смене режима использования документа. Доступные варианты: true – cекция будет свернута, false – Секция будет раскрыта. По умолчанию "false"]]></xs:documentation>
            </xs:annotation>
        </xs:attribute>
        <xs:attribute name="align" use="optional">
            <xs:annotation>
                <xs:documentation>
                    <![CDATA[Выравнивание по горизонтали]]></xs:documentation>
            </xs:annotation>
            <xs:simpleType>
                <xs:restriction base="xs:string">
                    <xs:enumeration value="left">
                        <xs:annotation>
                            <xs:documentation><![CDATA[По левому краю]]></xs:documentation>
                        </xs:annotation>
                    </xs:enumeration>
                    <xs:enumeration value="center">
                        <xs:annotation>
                            <xs:documentation><![CDATA[По центру]]></xs:documentation>
                        </xs:annotation>
                    </xs:enumeration>
                    <xs:enumeration value="right">
                        <xs:annotation>
                            <xs:documentation><![CDATA[По правому краю]]></xs:documentation>
                        </xs:annotation>
                    </xs:enumeration>
                    <xs:enumeration value="width">
                        <xs:annotation>
                            <xs:documentation><![CDATA[По ширине]]></xs:documentation>
                        </xs:annotation>
                    </xs:enumeration>
                </xs:restriction>
            </xs:simpleType>
        </xs:attribute>
        <xs:attribute name="style" type="formListStyleNameType" use="optional">
            <xs:annotation>
                <xs:documentation>
                    <![CDATA[Стиль. Указываются известные web-клиенту стили отображения элементов. При использовании неизвестного web-клиенту стиля, значение игнорируется]]></xs:documentation>
            </xs:annotation>
        </xs:attribute>
        <xs:attribute name="widget" type="widgetNameFormType" use="optional">
            <xs:annotation>
                <xs:documentation>
                    <![CDATA[Виджет. Указываются известные web-клиенту виджеты для отображения элементов. При использовании неизвестного web-клиенту виджета, значение игнорируется.]]></xs:documentation>
            </xs:annotation>
        </xs:attribute>
        <xs:attribute name="color" type="xs:string">
            <xs:annotation>
                <xs:documentation>
                    <![CDATA[Цвет виджета. Используется только в клиенте WebDocs.]]></xs:documentation>
            </xs:annotation>
        </xs:attribute>
        <xs:attribute name="flex-grow" type="xs:integer">
            <xs:annotation>
                <xs:documentation><![CDATA[Степень того, сколько свободного пространства в контейнере должно быть занято элементом. Только положительные числа. В случае, если задаётся flex-grow только для одного элмента, он занимает все оставшееся пространство в контейнере. Используется только в клиенте WebDocs.]]></xs:documentation>
            </xs:annotation>
        </xs:attribute>
        <xs:attribute name="flex-shrink" type="xs:integer">
            <xs:annotation>
                <xs:documentation><![CDATA[Фактор сжатия flex-элемента. Только положительные числа. Используется только в клиенте WebDocs.]]></xs:documentation>
            </xs:annotation>
        </xs:attribute>
        <xs:attribute name="overflow">
            <xs:annotation>
                <xs:documentation>
                    <![CDATA[Определяет необходимость переполненного блочного элемента обрезать его содержимое и каким образом это делать. Используется только в клиенте WebDocs.]]></xs:documentation>
            </xs:annotation>
            <xs:simpleType>
                <xs:restriction base="xs:string">
                    <xs:enumeration value="visible">
                        <xs:annotation>
                            <xs:documentation><![CDATA[Ничего не скрывать]]></xs:documentation>
                        </xs:annotation>
                    </xs:enumeration>
                    <xs:enumeration value="hidden">
                        <xs:annotation>
                            <xs:documentation><![CDATA[Скрывать]]></xs:documentation>
                        </xs:annotation>
                    </xs:enumeration>
                    <xs:enumeration value="scroll">
                        <xs:annotation>
                            <xs:documentation><![CDATA[Отображать скролл (всегда)]]></xs:documentation>
                        </xs:annotation>
                    </xs:enumeration>
                    <xs:enumeration value="auto">
                        <xs:annotation>
                            <xs:documentation><![CDATA[Отображать скролл, если элемент переполнен]]></xs:documentation>
                        </xs:annotation>
                    </xs:enumeration>
                </xs:restriction>
            </xs:simpleType>
        </xs:attribute>
    </xs:attributeGroup>

    <!-- Параметры визуализации для секции -->
    <xs:attributeGroup name="attributeGroupSectionAppearance">
        <xs:attribute name="field-layout" use="optional" default="vertical">
            <xs:annotation>
                <xs:documentation><![CDATA[Расположение полей]]></xs:documentation>
            </xs:annotation>
            <xs:simpleType>
                <xs:restriction base="xs:string">
                    <xs:enumeration value="vertical">
                        <xs:annotation>
                            <xs:documentation>
                                <![CDATA[Вертикальное расположение. Поля располагаются вертикально в один столбец]]></xs:documentation>
                        </xs:annotation>
                    </xs:enumeration>
                    <xs:enumeration value="horizontal">
                        <xs:annotation>
                            <xs:documentation>
                                <![CDATA[Горизонтальное расположение. Поля располагаются горизонтально в одной строке]]></xs:documentation>
                        </xs:annotation>
                    </xs:enumeration>
                </xs:restriction>
            </xs:simpleType>
        </xs:attribute>
        <xs:attribute name="turn" type="xs:boolean" use="optional" default="false">
            <xs:annotation>
                <xs:documentation>
                    <![CDATA[Свернутость. Определяет отображение Секции при открытии или смене режима использования документа. Доступные варианты: true – cекция будет свернута, false – Секция будет раскрыта. По умолчанию "false"]]></xs:documentation>
            </xs:annotation>
        </xs:attribute>
        <xs:attribute name="align" use="optional">
            <xs:annotation>
                <xs:documentation>
                    <![CDATA[Выравнивание по горизонтали]]></xs:documentation>
            </xs:annotation>
            <xs:simpleType>
                <xs:restriction base="xs:string">
                    <xs:enumeration value="left">
                        <xs:annotation>
                            <xs:documentation><![CDATA[По левому краю]]></xs:documentation>
                        </xs:annotation>
                    </xs:enumeration>
                    <xs:enumeration value="center">
                        <xs:annotation>
                            <xs:documentation><![CDATA[По центру]]></xs:documentation>
                        </xs:annotation>
                    </xs:enumeration>
                    <xs:enumeration value="right">
                        <xs:annotation>
                            <xs:documentation><![CDATA[По правому краю]]></xs:documentation>
                        </xs:annotation>
                    </xs:enumeration>
                    <xs:enumeration value="width">
                        <xs:annotation>
                            <xs:documentation><![CDATA[По ширине]]></xs:documentation>
                        </xs:annotation>
                    </xs:enumeration>
                </xs:restriction>
            </xs:simpleType>
        </xs:attribute>
        <xs:attribute name="style" type="sectionListStyleNameType" use="optional">
            <xs:annotation>
                <xs:documentation>
                    <![CDATA[Стиль. Указываются известные web-клиенту стили отображения элементов. При использовании неизвестного web-клиенту стиля, значение игнорируется]]></xs:documentation>
            </xs:annotation>
        </xs:attribute>
        <xs:attribute name="widget" type="widgetNameSectionType" use="optional">
            <xs:annotation>
                <xs:documentation>
                    <![CDATA[Виджет. Указываются известные web-клиенту виджеты для отображения элементов. При использовании неизвестного web-клиенту виджета, значение игнорируется.]]></xs:documentation>
            </xs:annotation>
        </xs:attribute>
        <xs:attribute name="color" type="xs:string">
            <xs:annotation>
                <xs:documentation>
                    <![CDATA[Цвет виджета. Используется только в клиенте WebDocs.]]></xs:documentation>
            </xs:annotation>
        </xs:attribute>
        <xs:attribute name="flex-direction" use="optional">
            <xs:annotation>
                <xs:documentation>
                    <![CDATA[Расположение дочерних виджетов в рамках контейнера. Используется только в клиенте WebDocs.]]></xs:documentation>
            </xs:annotation>
            <xs:simpleType>
                <xs:restriction base="xs:string">
                    <xs:enumeration value="row">
                        <xs:annotation>
                            <xs:documentation><![CDATA[Горизонтально]]></xs:documentation>
                        </xs:annotation>
                    </xs:enumeration>
                    <xs:enumeration value="column">
                        <xs:annotation>
                            <xs:documentation><![CDATA[Вертикально]]></xs:documentation>
                        </xs:annotation>
                    </xs:enumeration>
                    <xs:enumeration value="row-reverse">
                        <xs:annotation>
                            <xs:documentation><![CDATA[Горизонтально (инв.)]]></xs:documentation>
                        </xs:annotation>
                    </xs:enumeration>
                    <xs:enumeration value="column-reverse">
                        <xs:annotation>
                            <xs:documentation><![CDATA[Вертикально (инв.)]]></xs:documentation>
                        </xs:annotation>
                    </xs:enumeration>
                </xs:restriction>
            </xs:simpleType>
        </xs:attribute>
        <xs:attribute name="flex-wrap">
            <xs:annotation>
                <xs:documentation>
                    <![CDATA[Перенос элементов на другую строку, если они не умещаются на одной. Используется только в клиенте WebDocs.]]></xs:documentation>
            </xs:annotation>
            <xs:simpleType>
                <xs:restriction base="xs:string">
                    <xs:enumeration value="nowrap">
                        <xs:annotation>
                            <xs:documentation><![CDATA[Не переносить]]></xs:documentation>
                        </xs:annotation>
                    </xs:enumeration>
                    <xs:enumeration value="wrap">
                        <xs:annotation>
                            <xs:documentation><![CDATA[Переносить]]></xs:documentation>
                        </xs:annotation>
                    </xs:enumeration>
                    <xs:enumeration value="wrap-reverse">
                        <xs:annotation>
                            <xs:documentation><![CDATA[Переносить (инв.)]]></xs:documentation>
                        </xs:annotation>
                    </xs:enumeration>
                </xs:restriction>
            </xs:simpleType>
        </xs:attribute>
        <xs:attribute name="overflow">
            <xs:annotation>
                <xs:documentation>
                    <![CDATA[Определяет необходимость переполненного блочного элемента обрезать его содержимое и каким образом это делать. Используется только в клиенте WebDocs.]]></xs:documentation>
            </xs:annotation>
            <xs:simpleType>
                <xs:restriction base="xs:string">
                    <xs:enumeration value="visible">
                        <xs:annotation>
                            <xs:documentation><![CDATA[Ничего не скрывать]]></xs:documentation>
                        </xs:annotation>
                    </xs:enumeration>
                    <xs:enumeration value="hidden">
                        <xs:annotation>
                            <xs:documentation><![CDATA[Скрывать]]></xs:documentation>
                        </xs:annotation>
                    </xs:enumeration>
                    <xs:enumeration value="scroll">
                        <xs:annotation>
                            <xs:documentation><![CDATA[Отображать скролл (всегда)]]></xs:documentation>
                        </xs:annotation>
                    </xs:enumeration>
                    <xs:enumeration value="auto">
                        <xs:annotation>
                            <xs:documentation><![CDATA[Отображать скролл, если элемент переполнен]]></xs:documentation>
                        </xs:annotation>
                    </xs:enumeration>
                </xs:restriction>
            </xs:simpleType>
        </xs:attribute>
        <xs:attribute name="justify-content" use="optional">
            <xs:annotation>
                <xs:documentation>
                    <![CDATA[Выравнивание элементов контейнера вдоль оси X. Используется только в клиенте WebDocs.]]></xs:documentation>
            </xs:annotation>
            <xs:simpleType>
                <xs:restriction base="xs:string">
                    <xs:enumeration value="flex-start">
                        <xs:annotation>
                            <xs:documentation><![CDATA[В начале]]></xs:documentation>
                        </xs:annotation>
                    </xs:enumeration>
                    <xs:enumeration value="flex-end">
                        <xs:annotation>
                            <xs:documentation><![CDATA[В конце]]></xs:documentation>
                        </xs:annotation>
                    </xs:enumeration>
                    <xs:enumeration value="center">
                        <xs:annotation>
                            <xs:documentation><![CDATA[По центру]]></xs:documentation>
                        </xs:annotation>
                    </xs:enumeration>
                    <xs:enumeration value="space-between">
                        <xs:annotation>
                            <xs:documentation><![CDATA[Равномерное распределение]]></xs:documentation>
                        </xs:annotation>
                    </xs:enumeration>
                    <xs:enumeration value="space-around">
                        <xs:annotation>
                            <xs:documentation><![CDATA[Равномерное распределение]]></xs:documentation>
                        </xs:annotation>
                    </xs:enumeration>
                </xs:restriction>
            </xs:simpleType>
        </xs:attribute>
        <xs:attribute name="align-items" use="optional">
            <xs:annotation>
                <xs:documentation>
                    <![CDATA[Выравнивание элементов контейнера вдоль оси Y. Используется только в клиенте WebDocs.]]></xs:documentation>
            </xs:annotation>
            <xs:simpleType>
                <xs:restriction base="xs:string">
                    <xs:enumeration value="flex-start">
                        <xs:annotation>
                            <xs:documentation><![CDATA[В начале]]></xs:documentation>
                        </xs:annotation>
                    </xs:enumeration>
                    <xs:enumeration value="flex-end">
                        <xs:annotation>
                            <xs:documentation><![CDATA[В конце]]></xs:documentation>
                        </xs:annotation>
                    </xs:enumeration>
                    <xs:enumeration value="center">
                        <xs:annotation>
                            <xs:documentation><![CDATA[По центру]]></xs:documentation>
                        </xs:annotation>
                    </xs:enumeration>
                    <xs:enumeration value="baseline">
                        <xs:annotation>
                            <xs:documentation><![CDATA[По базовой линии]]></xs:documentation>
                        </xs:annotation>
                    </xs:enumeration>
                </xs:restriction>
            </xs:simpleType>
        </xs:attribute>
        <xs:attribute name="flex-grow" type="xs:integer">
            <xs:annotation>
