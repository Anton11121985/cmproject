            <filter-ref ref="byPlacementInputBus" applicable="true"/>
            <filter-ref ref="byPerson"/>
            <filter-ref ref="byDoc"/>
            <filter-ref ref="onControl"/>
            <filter-ref ref="byDate"/>
            <filter-ref ref="byAddressee"/>
