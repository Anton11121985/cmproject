<?xml version='1.0' encoding='UTF-8'?>
<ui xmlns="http://www.intertrust.ru/schema/palette/tn-ui">
    <form schema-ref="ExampleAddEntrySubObject" group="true" projection="default" id="ExampleAddEntrySubObjectDialog" name="${ui.form.ExampleAddEntryDialog.name:Добавить запись}">
        <meta>
            <category name="Разработка и Аналитика"/>
            <documentation>Данная форма предназначена для демонстрации возможностей Палитры XML 7.0.х.</documentation>
        </meta>
        <properties>
            <hide condition-union="AND">
                <negative-condition-ref ref="dialog"/>
            </hide>
        </properties>
        <appearance>
            <dialog-mode height="70" width="70" unit="percent"/>
        </appearance>
        <component>
            <field attribute-ref="subject" name="${ui.form.ExampleAddEntrySubObjectDialog.subject.name:Описание}"/>
            <field attribute-ref="summa" name="${ui.form.ExampleAddEntrySubObjectDialog.summa.name:Сумма}"/>
            <field attribute-ref="comments" name="${ui.form.ExampleAddEntrySubObjectDialog.comments.name:Комментарий}"/>
            <button name="${ui.form.ExampleAddEntrySubObjectDialog.button.name:Добавить запись}">
                <hint-pop-up>${ui.form.ExampleAddEntrySubObjectDialog.button.hintPopUp:Добавить запись}</hint-pop-up>
                <action>
                    <system name="submit"/>
                </action>
            </button>
        </component>
    </form>
</ui>