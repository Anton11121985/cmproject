        <script event="open" lang="SPEL"><![CDATA[nameJoin==null ?'' : '1'.equals(statusOld) ? 'Заменена на ' + nameJoin : 'Объединена с ' + nameJoin]]></script>
      </calc-values>
    </string>
    <string name="bankname">
      <storage-field name="CBank"/>
