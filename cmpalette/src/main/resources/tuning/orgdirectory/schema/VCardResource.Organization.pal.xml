        <script event="open" lang="SPEL"><![CDATA[(org==null || fullnameAdmin==null) ? null : ((fullnameAdmin.equals(fn) || fn==null) ?(fullnameAdmin) : (fullnameAdmin)+' ('+fn+')')]]></script>
      </calc-values>
