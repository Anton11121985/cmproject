<?xml version='1.0' encoding='UTF-8'?>
<ui xmlns="http://www.intertrust.ru/schema/palette/tn-ui">
  <form schema-ref="ResolutionTasksResource" id="ResolutionTasksResourceForm" projection="default" showtabs="true">
    <properties>
      <hide condition-union="AND">
        <negative-condition-ref ref="edit"/>
        <negative-condition-ref ref="read"/>
      </hide>
    </properties>
    <appearance widget="tabs"/>
    <component>
    <button name="${ui.form.ResolutionTasksResource.button.В корзину.name:В корзину}">
        <properties>
            <hide condition-union="AND">
                <negative-condition-ref ref="CanTrashTasksResolution"/>
            </hide>
        </properties>
        <hint-pop-up>${ui.form.ResolutionTasksResource.button.В корзину.hintPopUp:В корзину}</hint-pop-up>
        <action>
            <system name="http://intertrust.ru/cmj/relations#move.to.trash"/>
        </action>
    </button>
      <button name="${ui.form.ResolutionTasksResourceForm.button.Связанный документ.name:Связанный документ}">
        <properties>
          <hide condition-union="AND">
            <negative-condition-ref ref="read"/>
          </hide>
        </properties>
        <hint-pop-up>${ui.form.ResolutionTasksResourceForm.button.Связанный документ.hintPopUp:Связанный документ}</hint-pop-up>
        <action>
          <system name="http://intertrust.ru/cmj/relations#create.linked.document"/>
        </action>
      </button>
        <button name="${ui.form.ResolutionTasksResourceForm.button.Сохранить и заполнить файл(ы).name:Сохранить и заполнить файл(ы)}">
            <properties>
                <hide condition-union="AND">
                    <negative-condition-ref ref="$canFillFilesTasks"/>
                </hide>
            </properties>
            <hint-pop-up>${ui.form.ResolutionTasksResourceForm.button.Сохранить и заполнить файл(ы).hintPopUp:Сохранить и заполнить файл(ы)}
            </hint-pop-up>
            <action>
                <system name="http://intertrust.ru/cmj/relations#save.and.fill.files"/>
            </action>
        </button>
      <section id="ExecutionTab" name="${ui.form.ResolutionTasksResourceForm.section.ExecutionTab.name:Исполнение}">
        <component>
          <field attribute-ref="category" name="${ui.form.ResolutionTasksResourceForm.section.ExecutionTab.field.category.name:Тематика:}">
            <properties>
              <hide condition-union="AND">
                <condition>true</condition>
              </hide>
            </properties>
            <appearance importance="normal"/>
            <hint-pop-up>${ui.form.ResolutionTasksResourceForm.section.ExecutionTab.field.category.hintPopUp:Тематика}</hint-pop-up>
          </field>
          <section id="exec_row1" group="true">
            <appearance field-layout="horizontal"/>
            <component>
              <field recalc="true" attribute-ref="author">
                <appearance align="left">
                  <label-style field-width="15" field-unit="symbol"/>
                </appearance>
                <directories limit-livesearch="sys-current">
                  <directory-ref ref="CURRENT_SYS_ROLE"/>
                  <directory-ref ref="CURRENT_DEP_HUMAN_HH"/>
                  <directory-ref ref="FV_CURR_HUMAN_HH_DEP_ROLE"/>
                </directories>
              </field>
              <field attribute-ref="dateLabel">
                <properties>
                  <read-only condition-union="AND">
                    <condition>true</condition>
                  </read-only>
                </properties>
                <appearance align="left">
                  <label-style field-width="4" field-unit="symbol"/>
                </appearance>
              </field>
              <field recalc="true" attribute-ref="date"/>
            </component>
          </section>
          <field attribute-ref="executor" recalc="true">
            <hint-in-field>${ui.form.ResolutionTasksResourceForm.section.ExecutionTab.field.executor.hintInField:Выберите исполнителей}</hint-in-field>
            <directories livesearch="true" limit-livesearch="no-restrictions">
              <directory-ref ref="CURRENT_All"/>
              <directory-ref ref="CURRENT_All_Hierarchy"/>
              <directory-ref ref="AlienBeards"/>
              <directory-ref ref="sendlist"/>
              <directory-ref ref="FV_CURR_AND_FOREIGN_HUMAN_HH_DEP_ORG_SYS"/>
            </directories>
          </field>
          <field attribute-ref="execNotice">
            <properties>
              <hide condition-union="AND">
                <negative-condition-ref ref="task_onControl"/>
              </hide>
            </properties>
          </field>
          <section id="PeriodicResolutionParameters"
                     name="${ui.form.ResolutionTasksResource.section.Periodic.name:Параметры периодичности}" group="true">
                <properties>
                    <hide>
                        <negative-condition-ref ref="ResolutionTasksResource_showPeriodicParameters"/>
                    </hide>
                </properties>
                <component>
                    <section id="periodic_row1" group="true">
                        <appearance field-layout="horizontal"/>
                        <component>
                            <field attribute-ref="isPeriodic"
                                   name="${ui.form.ResolutionTasksResource.isPeriodicTask:Периодическое поручение}" recalc="true">
                                <appearance align="left">
                                    <label-style label-unit="symbol" label-width="25" field-width="6" field-unit="symbol"/>
                                </appearance>
                            </field>
                            <section id="PeriodParams_row1_col2" group="true">
                                <properties>
                                    <hide>
                                        <negative-condition-ref ref="ResolutionTasksResource_isPeriodic"/>
                                    </hide>
                                </properties>
                                <component>
                                    <button recalc="true" attribute-ref="fillSchedule" name="${ui.form.DatesSchedule.compute:Вычислить график}">
                                        <properties>
                                            <hide condition-union="AND">
                                                <negative-condition-ref ref="edit"/>
                                                <negative-condition-ref ref="ResolutionTasksResource_isPeriodTypeNotDates"/>
                                            </hide>
                                        </properties>
                                    </button>
                                </component>
                            </section>
                        </component>
                    </section>
                    <section id="periodic_row2" group="true">
                        <properties>
                            <hide>
                                <negative-condition-ref ref="ResolutionTasksResource_isPeriodic"/>
                            </hide>
                        </properties>
                        <appearance field-layout="horizontal" />
                        <component>
                            <field attribute-ref="periodicParameters.periodType" name="${ui.form.ResolutionTasksResource.periodType:Тип периода:}" recalc="true">
                                <appearance align="left">
                                    <label-style label-unit="symbol" label-width="15" field-unit="symbol" field-width="25"/>
                                </appearance>
                                <directories>
                                    <directory-ref ref="periodType"/>
                                </directories>
                                <properties>
                                    <require condition-union="AND">
                                        <condition-ref ref="edit"/>
                                    </require>
                                </properties>
                            </field>
                            <field attribute-ref="periodicParameters.period" name="${ui.form.ResolutionTasksResource.period:Период:}" recalc="true">
                                <appearance align="left">
                                    <label-style label-unit="symbol" label-width="8" field-unit="symbol" field-width="25"/>
                                </appearance>
                                <properties>
                                    <hide>
                                        <condition-ref ref="ResolutionTasksResource_isPeriodTypeDates"/>
                                    </hide>
                                    <require condition-union="AND">
                                        <condition-ref ref="edit"/>
                                        <condition-ref ref="ResolutionTasksResource_isPeriodTypeNotDates"/>
                                    </require>
                                </properties>
                            </field>
                            <field attribute-ref="periodicParameters.nextDueDate" name="${ui.form.ResolutionTasksResource.nextDueDateTask:Срок следующего поручения:}" recalc="true">
                                <appearance align="left">
                                    <label-style label-unit="symbol" label-width="26" field-unit="symbol" field-width="10"/>
                                </appearance>
                                <properties>
                                    <hide>
                                        <condition-ref ref="ResolutionTasksResource_isPeriodTypeDates"/>
                                    </hide>
                                    <require condition-union="AND">
                                        <condition-ref ref="edit"/>
                                        <condition-ref ref="ResolutionTasksResource_isPeriodTypeNotDates"/>
                                    </require>
                                </properties>
                            </field>
                            <field attribute-ref="periodicParameters.createBefore" name="${ui.form.ResolutionTasksResource.createBefore:Создать за (раб. дней):}">
                                <appearance align="left">
                                    <label-style label-unit="symbol" label-width="23" field-unit="symbol" field-width="25"/>
                                </appearance>
                                <properties>
                                    <hide>
                                        <condition-ref ref="ResolutionTasksResource_isPeriodTypeDates"/>
                                    </hide>
                                    <require condition-union="AND">
                                        <condition-ref ref="edit"/>
                                        <condition-ref ref="ResolutionTasksResource_isPeriodTypeNotDates"/>
                                    </require>
                                </properties>
                            </field>
                        </component>
                    </section>
                    <section id="periodic_row3" group="true">
                        <appearance field-layout="horizontal"/>
                        <properties>
                            <hide>
                                <negative-condition-ref ref="ResolutionTasksResource_isPeriodic"/>
                            </hide>
                        </properties>
                        <component>
                            <field attribute-ref="periodicParameters.endDate" name="${ui.form.ResolutionTasksResource.endDate:Окончание:}">
                                <appearance align="left">
                                    <label-style label-unit="symbol" label-width="15" field-unit="symbol" field-width="25"/>
                                </appearance>
                                <properties>
                                    <hide>
                                        <condition-ref ref="ResolutionTasksResource_isPeriodTypeDates"/>
                                    </hide>
                                    <require condition-union="AND">
                                        <condition-ref ref="edit"/>
                                        <condition-ref ref="ResolutionTasksResource_isPeriodTypeNotDates"/>
                                    </require>
                                </properties>
                            </field>
                            <field attribute-ref="periodicParameters.dismissalNoticeLabel" name="${ui.form.ResolutionTasksResource.dismissalNoticeLabel:При увольнении исполнителя уведомлять:}">
                                <appearance align="left">
                                    <label-style label-unit="symbol" label-width="38" field-unit="symbol" field-width="2"/>
                                </appearance>
                                <properties>
                                    <read-only>
                                        <condition>true</condition>
                                    </read-only>
                                </properties>
                            </field>
                            <field attribute-ref="periodicParameters.dismissalNoticeAuthor" name="${ui.form.ResolutionTasksResource.dismissalNoticeAuthor:Автора:}">
                                <appearance align="left">
                                    <label-style field-unit="symbol" field-width="2"/>
                                </appearance>
                            </field>
                            <field attribute-ref="periodicParameters.dismissalNoticeController" name="${ui.form.ResolutionTasksResource.dismissalNoticeController:Контролера:}">
                                <appearance align="left">
                                    <label-style field-unit="symbol" field-width="2"/>
                                </appearance>
                            </field>
                        </component>
                    </section>
                    <field attribute-ref="periodicParameters.periodSubtype" name="${ui.form.ResolutionTasksResource.periodSubtype:Доп. параметры:}">
                        <appearance align="left">
                            <label-style label-unit="symbol" label-width="15" field-unit="symbol" field-width="25"/>
                        </appearance>
                        <properties>
                            <hide>
                                <negative-condition-ref ref="ResolutionTasksResource_isPeriodTypeMonthly"/>
                            </hide>
                            <require condition-union="AND">
                                <condition-ref ref="edit"/>
                                <condition-ref ref="ResolutionTasksResource_isPeriodTypeMonthly"/>
                            </require>
                        </properties>
                        <directories>
                            <directory-ref ref="period.subtype"/>
                        </directories>
                    </field>
                    <section id="periodic_row4" group="true">
                        <appearance field-layout="horizontal"/>
                        <properties>
                            <hide>
                                <negative-condition-ref ref="ResolutionTasksResource_isPeriodic"/>
                            </hide>
                        </properties>
                        <component>
                            <field attribute-ref="periodicParameters.resolutionDatesSchedule">
                                <properties>
                                    <read-only>
                                        <condition-ref ref="ResolutionTasksResource_isPeriodTypeNotDates"/>
                                    </read-only>
                                    <hide>
                                        <negative-condition-ref ref="ResolutionTasksResource_isSchedulePresent"/>
                                    </hide>
                                </properties>
                                <appearance location="table" importance="normal"/>
                            </field>
                        </component>
                    </section>
                </component>
            </section>
        </component>
      </section>
      <section id="Header">
        <component>
          <section id="row1" group="true">
            <appearance field-layout="horizontal"/>
            <component>
              <field attribute-ref="objectLabel">
                <properties>
                  <read-only condition-union="AND">
                    <condition>true</condition>
                  </read-only>
                </properties>
                <appearance align="left">
                  <label-style field-width="10" field-unit="symbol"/>
                  <alt-appearancies>
                    <alt-appearance>
                      <appearance-ref ref="css_headerElementWithIcon"/>
                      <enable condition-union="AND">
                        <condition>true</condition>
                      </enable>
                    </alt-appearance>
                  </alt-appearancies>
                </appearance>
              </field>
              <field attribute-ref="priority">
                <appearance align="left">
                    <label-style field-unit="symbol" field-width="27"/>
                </appearance>
              </field>
                <section id="securityStampValue" group="true">
                    <properties>
                        <hide condition-union="AND">
                            <negative-condition-ref ref="ShowSecurityStampFieldTask"/>
                        </hide>
                    </properties>
                    <component>
                        <field attribute-ref="securityStamp" recalc="true"
                               name="${ui.form.RkkResourceForm.section.Header.section.row15.field.securityStampText.name:Гриф доступа:}">
                            <properties>
                                <hide condition-union="AND">
                                    <condition-ref ref="docReasonWithdrawalIsViewTask"/>
                                    <condition-ref ref="docReasonWithdrawalManualIsViewTask"/>
                                    <condition-ref ref="docReasonWithdrawalReasonIsViewTask"/>
                                </hide>
                            </properties>
                            <appearance importance="high" align="center">
                                <label-style field-unit="symbol" field-width="27">
                                    <style id="tunBlack"/>
                                </label-style>
                                <field-style>
                                    <value-style>
                                        <style id="tunBlack"/>
                                    </value-style>
                                </field-style>
                            </appearance>
                            <directories>
                                <directory-select-value attribute-ref="personGrifs"/>
                            </directories>
                            <hint-pop-up>
                                ${ui.form.RkkResourceForm.section.Header.section.row15.field.securityStampText.hintPopUp:Гриф ограничения доступа к документу}
                            </hint-pop-up>
                        </field>
                    </component>
                </section>
                <field attribute-ref="docReasonWithdrawlObj.Link"
                       name="${ui.form.RkkResourceForm.section.Header.section.row15.field.securityStampLink.name:Гриф доступа}">
                    <properties>
                        <read-only condition-union="AND">
                            <condition>true</condition>
                        </read-only>
                        <hide condition-union="AND">
                            <negative-condition-ref ref="docReasonWithdrawalIsViewTask"/>
                        </hide>
                    </properties>
                    <appearance importance="high">
                        <label-style field-width="6">
                            <style id="tunBold"/>
                        </label-style>
                    </appearance>
                </field>
                <field attribute-ref="docReasonWithdrawlObj.GrifLabel">
                    <properties>
                        <read-only condition-union="AND">
                            <condition>true</condition>
                        </read-only>
                        <hide condition-union="AND">
                            <negative-condition-ref ref="docReasonWithdrawalManualIsViewTask"/>
                            <negative-condition-ref ref="docReasonWithdrawalReasonIsViewTask"/>
                        </hide>
                    </properties>
                    <appearance importance="normal">
                        <label-style field-width="11">
                            <style id="tunGray"/>
                            <style id="tunResetBtnStyles"/><!-- стиль tunResetBtnStyles, чтобы был такой же margin-top, как у кнопки "снят" -->
                        </label-style>
                    </appearance>
                </field>
                <button attribute-ref="docReasonWithdrawlObj" name="${grifWithdrawed:снят}">
                    <properties>
                        <hide condition-union="AND">
                            <negative-condition-ref ref="docReasonWithdrawalManualIsViewTask"/>
                        </hide>
                    </properties>
                    <appearance align="left">
                        <label-style unit="symbol" width="6">
                            <style id="tunBlue"/>
                            <style id="tunUnderline"/>
                            <style id="tunBold"/>
                        </label-style>
                    </appearance>
                    <action>
                        <custom>
                            <change-subobject schema-ref="ReasonDocDialog"/>
                        </custom>
                    </action>
                </button>
                <button attribute-ref="docReasonWithdrawlObj" name="${grifWithdrawed:снят}">
                    <properties>
                        <hide condition-union="AND">
                            <negative-condition-ref ref="read"/>
                            <negative-condition-ref ref="docReasonWithdrawalReasonIsViewTask"/>
                        </hide>
                    </properties>
                    <appearance align="left">
                        <label-style unit="symbol" width="6">
                            <style id="tunBlue"/>
                            <style id="tunUnderline"/>
                            <style id="tunBold"/>
                        </label-style>
                    </appearance>
                    <action>
                        <custom>
                            <change-subobject schema-ref="ReasonDocTextDialog"/>
                        </custom>
                    </action>
                </button>
                <button attribute-ref="docReasonWithdrawlObj" name="${grifWithdrawed:снят}">
                    <properties>
                        <hide condition-union="AND">
                            <negative-condition-ref ref="edit"/>
                            <negative-condition-ref ref="docReasonWithdrawalReasonIsViewTask"/>
                        </hide>
                    </properties>
                    <appearance align="left">
                        <label-style unit="symbol" width="6">
                            <style id="tunBlue"/>
                            <style id="tunUnderline"/>
                            <style id="tunBold"/>
                        </label-style>
                    </appearance>
                    <action>
                        <custom>
                            <change-subobject schema-ref="ReasonDocTextEditDialog"/>
                        </custom>
                    </action>
                </button>
                <field attribute-ref="addLinkedDocGrif" recalc="true">
                    <properties>
                        <hide>
                            <condition>true</condition>
                        </hide>
                    </properties>
                </field>
                <field attribute-ref="docReasonWithdrawlObj.withdrawStampReasonText" recalc="true">
                    <properties>
                        <hide>
                            <condition>true</condition>
                        </hide>
                    </properties>
                </field>
                <field attribute-ref="PaperDocNumbers"
                       name="${ui.form.ResolutionTasksResourceForm.section.Header.section.row15.field.PaperDocNumbers.name:№ экз:}">
                    <properties>
                        <hide condition-union="AND">
                            <condition>true</condition>
                        </hide>
                    </properties>
                    <appearance importance="high" align="right">
                        <label-style field-unit="symbol" field-width="15">
                            <style id="tunBlack"/>
                        </label-style>
                        <field-style>
                            <value-style>
                                <style id="tunBlack"/>
                            </value-style>
                        </field-style>
                        <alt-appearancies>
                            <alt-appearance>
                                <appearance-ref ref="css_headerElementBold"/>
                                <enable condition-union="AND">
                                    <condition>true</condition>
                                </enable>
                            </alt-appearance>
                        </alt-appearancies>
                    </appearance>
                    <hint-pop-up>
                        ${ui.form.ResolutionTasksResourceForm.section.Header.section.row15.field.PaperDocNumbers.hintPopUp:№ бумажного документа, через запятую}
                    </hint-pop-up>
                </field>
                <field attribute-ref="DOPName">
                    <properties>
                        <hide condition-union="AND">
                            <condition>true</condition>
                        </hide>
                    </properties>
                </field>
                <field attribute-ref="securityStamp" recalc="true">
                    <properties>
                        <hide condition-union="AND">
                            <condition>true</condition>
                        </hide>
                    </properties>
                </field>
                <section id="column13" group="true">
                    <appearance field-layout="vertical"/>
                    <component>
                        <field attribute-ref="showState">
                            <properties>
                                <read-only condition-union="AND">
                                    <condition>true</condition>
                                </read-only>
                            </properties>
                            <appearance align="right" importance="high" multiline="false">
                                <alt-appearancies>
                                    <alt-appearance>
                                        <appearance-ref ref="rightAlign"/>
                                        <enable condition-union="AND">
                                            <condition>true</condition>
                                        </enable>
                                    </alt-appearance>
                                </alt-appearancies>
                                <label-style field-width="7" field-unit="symbol">
                                    <style id="tunBold"/>
                                </label-style>
                            </appearance>
                        </field>
                        <section id="row15" group="true">
                            <properties>
                                <hide condition-union="AND">
                                    <condition-ref ref="securityStampIsEmptyTask"/>
                                    <condition-ref ref="readTaskResource"/>
                                </hide>
                            </properties>
                            <appearance field-layout="horizontal">
                                <alt-appearancies>
                                    <alt-appearance>
                                        <appearance-ref ref="horizontalSection"/>
                                        <enable condition-union="AND">
                                            <condition>true</condition>
                                        </enable>
                                    </alt-appearance>
                                </alt-appearancies>
                            </appearance>
                        </section>
                    </component>
                </section>
            </component>
          </section>
          <field attribute-ref="$titleHeader">
            <properties>
              <hide condition-union="AND">
                <negative-condition-ref ref="read"/>
              </hide>
            </properties>
            <appearance importance="normal">
              <label-style>
                <style id="tunFontSize14"/>
                <style id="tunClickableUnderline"/>
              </label-style>
              <field-style>
                <value-style>
                  <style id="tunFontSize14"/>
                  <style id="tunClickableUnderline"/>
                </value-style>
              </field-style>
            </appearance>
            <hint-in-field>${ui.form.ResolutionTasksResourceForm.section.Header.field.titleHeader.hintInField:Введите текст поручения}</hint-in-field>
            <hint-pop-up>${ui.form.ResolutionTasksResourceForm.section.Header.field.titleHeader.hintInField:Введите текст поручения}</hint-pop-up>
            <directories manual-input="true" limit-livesearch="no-restrictions">
              <directory-ref ref="taskText"/>
            </directories>
          </field>
          <field attribute-ref="$titleHeader">
            <properties>
              <require condition-union="AND">
                  <condition-ref ref="edit"/>
              </require>
              <hide condition-union="AND">
                <negative-condition-ref ref="edit"/>
              </hide>
            </properties>
            <appearance importance="normal"/>
            <hint-in-field>${ui.form.ResolutionTasksResourceForm.section.Header.field.titleHeader.hintInField:Введите текст поручения}</hint-in-field>
            <hint-pop-up>${ui.form.ResolutionTasksResourceForm.section.Header.field.titleHeader.hintInField:Введите текст поручения}</hint-pop-up>
            <directories manual-input="true" limit-livesearch="sys-current">
              <directory-ref ref="taskText"/>
            </directories>
          </field>
          <section id="row2" group="true">
            <appearance field-layout="horizontal"/>
            <component>
              <field attribute-ref="showProject">
                <properties>
                  <read-only condition-union="AND">
                    <condition>true</condition>
                  </read-only>
                  <hide condition-union="AND">
                    <negative-condition-ref ref="IsProject_Task"/>
                  </hide>
                </properties>
                <appearance align="left" multiline="false">
                  <label-style field-width="7" field-unit="symbol"/>
                </appearance>
              </field>
              <field attribute-ref="showRegInfo">
                <properties>
                  <read-only condition-union="AND">
                    <condition>true</condition>
                  </read-only>
                  <hide condition-union="AND">
                    <negative-condition-ref ref="Registrated_Task"/>
                  </hide>
                </properties>
                <appearance location="subform" align="left" multiline="false">
                  <label-style field-width="20" field-unit="symbol"/>
                </appearance>
              </field>
              <field attribute-ref="showAuthor" recalc="true">
                <properties>
                  <read-only condition-union="AND">
                    <condition>true</condition>
                  </read-only>
                </properties>
                <appearance location="subform" align="left" multiline="false">
                  <label-style field-width="18" field-unit="symbol"/>
                </appearance>
              </field>
              <field recalc="true" attribute-ref="resdeadline">
                <appearance align="right" importance="normal">
                  <label-style field-width="15" field-unit="symbol"/>
                </appearance>
              </field>
              <field recalc="true" attribute-ref="control">
                <appearance location="subform" align="right" importance="normal">
                  <label-style field-width="5" field-unit="symbol"/>
                </appearance>
              </field>
              <field attribute-ref="$executionAction">
                <appearance align="right" importance="normal">
                  <label-style field-width="5" field-unit="symbol"/>
                </appearance>
              </field>
                <field attribute-ref="labelContentTemp">
                    <properties>
                        <read-only>
                            <condition>true</condition>
                        </read-only>
                    </properties>
                    <appearance align="right">
                        <label-style field-width="46" field-unit="symbol"/>
                        <alt-appearancies>
                            <alt-appearance>
                                <appearance-ref ref="rightAlign"/>
                                <enable condition-union="AND">
                                    <condition>true</condition>
                                </enable>
                            </alt-appearance>
                        </alt-appearancies>
                    </appearance>
                </field>

