<?xml version='1.0' encoding='UTF-8'?>
<ui xmlns="http://www.intertrust.ru/schema/palette/tn-ui">
  <form schema-ref="MeetingResource" id="MeetingResourceEmailForm" projection="email">
    <properties>
      <hide condition-union="AND">
        <negative-condition-ref ref="email"/>
      </hide>
    </properties>
    <component>
      <section id="header">
        <component>
          <field attribute-ref="emailSubjectAgenda">
            <properties>
              <hide condition-union="AND">
                <condition-ref ref="MeetingEmailIsMinutes"/>
              </hide>
            </properties>
            <appearance importance="normal"/>
          </field>
          <field attribute-ref="emailSubjectMinutes">
            <properties>
              <hide condition-union="AND">
                <negative-condition-ref ref="MeetingEmailIsMinutes"/>
              </hide>
            </properties>
            <appearance importance="normal"/>
          </field>
        </component>
      </section>
      <section id="from">
        <component>
          <field attribute-ref="emailFrom">
            <appearance importance="normal"/>
            <directories limit-livesearch="sys-current">
              <directory-ref ref="CURRENT_SYS_HUMAN"/>
            </directories>
          </field>
        </component>
      </section>
      <section id="to">
        <component>
          <field attribute-ref="agenda.chairman">
            <properties>
              <hide condition-union="AND">
                <condition-ref ref="MeetingEmailIsMinutes"/>
              </hide>
            </properties>
            <appearance importance="normal"/>
          </field>
          <field attribute-ref="agenda.secretary">
            <properties>
              <hide condition-union="AND">
                <condition-ref ref="MeetingEmailIsMinutes"/>
              </hide>
            </properties>
            <appearance importance="normal"/>
          </field>
          <field attribute-ref="agenda.invited">
            <properties>
              <hide condition-union="AND">
                <condition-ref ref="MeetingEmailIsMinutes"/>
              </hide>
            </properties>
            <appearance importance="normal"/>
          </field>
          <field attribute-ref="minutes.chairman">
            <properties>
              <hide condition-union="AND">
                <negative-condition-ref ref="MeetingEmailIsMinutes"/>
              </hide>
            </properties>
            <appearance importance="normal"/>
          </field>
          <field attribute-ref="minutes.secretary">
            <properties>
              <hide condition-union="AND">
                <negative-condition-ref ref="MeetingEmailIsMinutes"/>
              </hide>
            </properties>
            <appearance importance="normal"/>
          </field>
          <field attribute-ref="minutes.invited">
            <properties>
              <hide condition-union="AND">
                <negative-condition-ref ref="MeetingEmailIsMinutes"/>
              </hide>
            </properties>
            <appearance importance="normal"/>
          </field>
          <field attribute-ref="agenda.permanent">
            <properties>
              <hide condition-union="AND">
                <condition-ref ref="MeetingEmailIsMinutes"/>
              </hide>
            </properties>
            <appearance importance="normal"/>
          </field>
          <field attribute-ref="minutes.permanent">
            <properties>
              <hide condition-union="AND">
                <negative-condition-ref ref="MeetingEmailIsMinutes"/>
              </hide>
            </properties>
            <appearance importance="normal"/>
          </field>
        </component>
      </section>
      <section id="body">
        <component>
          <field attribute-ref="emailBodyAgenda">
            <properties>
              <hide condition-union="AND">
                <condition-ref ref="MeetingEmailIsMinutes"/>
              </hide>
            </properties>
            <appearance importance="normal"/>
          </field>
          <field attribute-ref="emailBodyMinutes">
            <properties>
              <hide condition-union="AND">
                <negative-condition-ref ref="MeetingEmailIsMinutes"/>
              </hide>
            </properties>
            <appearance importance="normal"/>
          </field>
        </component>
      </section>
      <section id="content"/>
    </component>
  </form>
</ui>