<?xml version='1.0' encoding='UTF-8'?>
<schemas xmlns="http://www.intertrust.ru/schema/palette/tn-schema">
    <schema recalc="true" name="OrdersTable">
        <string name="orderId">
            <storage-field name="orderId"/>
            <meta>
                <documentation>Идентификатор заказа</documentation>
            </meta>
        </string>
        <integer name="orderPostId" createlog="true">
            <storage-field name="orderPostId"/>
            <meta>
                <documentation>Идентификатор заказа в сервисе Почта России</documentation>
            </meta>
        </integer>
        <string name="orderNumber">
            <storage-field name="orderNumber"/>
            <meta>
                <documentation>Номер заказа</documentation>
            </meta>
        </string>
        <actor name="orderRecipient">
            <storage-field name="orderRecipient"/>
            <meta>
                <documentation>Получатель заказа</documentation>
            </meta>
        </actor>
        <string name="orderAddress">
            <storage-field name="orderAddress"/>
            <meta>
                <documentation>Адрес получателя заказа</documentation>
            </meta>
        </string>
    </schema>
</schemas>