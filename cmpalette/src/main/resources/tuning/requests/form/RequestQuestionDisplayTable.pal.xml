<?xml version='1.0' encoding='UTF-8'?>
<ui xmlns="http://www.intertrust.ru/schema/palette/tn-ui">
  <form schema-ref="RequestQuestionDisplay" id="RequestQuestionDisplayTable" projection="default">
    <properties>
      <hide condition-union="AND">
        <negative-condition-ref ref="table"/>
      </hide>
    </properties>
    <component>
      <section id="colClassifier" name="${ui.form.RequestQuestionDisplayTable.section.colClassifier.name:Тематика}">
        <component>
          <field attribute-ref="questionValue">
            <appearance importance="normal"/>
          </field>
        </component>
      </section>
      <section id="colClass" name="${ui.form.RequestQuestionDisplayTable.section.colClass.name:Вид вопроса}">
        <component>
          <field recalc="true" attribute-ref="questionClass">
            <appearance importance="normal"/>
          </field>
        </component>
      </section>
      <section id="colClassType" name="${ui.form.RequestQuestionDisplayTable.section.colClassType.name:Тип вида вопроса}">
        <component>
          <field attribute-ref="questionClassType">
            <appearance importance="normal"/>
          </field>
        </component>
      </section>
    </component>
  </form>
</ui>