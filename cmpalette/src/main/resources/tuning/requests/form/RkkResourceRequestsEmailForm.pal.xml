<?xml version='1.0' encoding='UTF-8'?>
<ui xmlns="http://www.intertrust.ru/schema/palette/tn-ui">
  <form schema-ref="RkkResourceRequests" id="RkkResourceRequestsEmailForm" projection="email">
    <properties>
      <hide condition-union="AND">
        <negative-condition-ref ref="email"/>
      </hide>
    </properties>
    <component>
      <section id="header">
        <component>
          <field attribute-ref="$emailHeader">
            <appearance importance="normal"/>
          </field>
        </component>
      </section>
      <section id="body">
        <component>
          <field attribute-ref="$emailDocinfo" name="${ui.form.RkkResourceRequestsEmailForm.section.body.field.emailDocinfo.name:ДОКУМЕНТ:}">
            <appearance importance="normal"/>
          </field>
          <field attribute-ref="title" name="${ui.form.RkkResourceRequestsEmailForm.section.body.field.title.name:Заголовок:}">
            <appearance importance="normal"/>
          </field>
        </component>
      </section>
      <section id="content"/>
    </component>
  </form>
</ui>