<?xml version='1.0' encoding='UTF-8'?>
<ui xmlns="http://www.intertrust.ru/schema/palette/tn-ui">
  <form schema-ref="AdditionalCorrespondentDisplay" id="AdditionalCorrespondentsFormDisplay" projection="default">
    <properties>
      <hide condition-union="AND">
        <negative-condition-ref ref="table"/>
      </hide>
    </properties>
    <component>
      <section name="${ui.form.AdditionalCorrespondentsFormDisplay.section.correspondent.name:Корреспондент}" id="correspondent">
        <component>
          <field attribute-ref="correspondent">
            <appearance importance="normal">
              <label-style field-unit="percent" field-width="50"/>
            </appearance>
          </field>
        </component>
      </section>
      <section name="${ui.form.AdditionalCorrespondentsFormDisplay.section.author.name:Автор}" id="author">
        <component>
          <field attribute-ref="additionalAuthor">
            <appearance importance="normal"/>
          </field>
        </component>
      </section>
    </component>
  </form>
</ui>