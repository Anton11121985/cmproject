<?xml version='1.0' encoding='UTF-8'?>
<ui xmlns="http://www.intertrust.ru/schema/palette/tn-ui">
  <form schema-ref="DTRSearchByBarcodeCollectionSchema" id="DTRSearchByBarcodeCollectionForm" projection="default">
    <properties>
      <hide condition-union="AND">
        <negative-condition-ref ref="edit"/>
        <negative-condition-ref ref="read"/>
      </hide>
    </properties>
    <component>
      <section id="RootMenu">
        <component>
          <button name="${ui.form.DTRSearchByBarcodeCollectionSchema.section.RootMenu.button.SaveRequest.name:Сохранить запрос...}">
            <properties>
              <hide>
                <condition>true</condition>
              </hide>
            </properties>
            <action>
              <system name="SAVE_SEARCH_REQUEST_AS_TEMPLATE"/>
            </action>
          </button>
          <button name="${ui.form.DTRSearchByBarcodeCollectionSchema.section.RootMenu.button.ClarifyRequest.name:Уточнить запрос}">
            <properties>
              <hide>
                <condition>true</condition>
              </hide>
            </properties>
            <action>
              <system name="CLARIFY_SEARCH_REQUEST"/>
            </action>
          </button>
          <button name="${ui.form.DTRSearchByBarcodeCollectionSchema.section.RootMenu.button.NewRequest.name:Новый запрос}">
            <properties>
              <hide>
                <condition>true</condition>
              </hide>
            </properties>
            <action>
              <system name="NEW_SEARCH_REQUEST"/>
            </action>
          </button>
          <button name="${ui.form.DTRSearchByBarcodeCollectionSchema.section.RootMenu.button.Report.name:Отчёт}">
            <properties>
              <hide>
                <condition>true</condition>
              </hide>
            </properties>
            <action>
              <system name="REPORT"/>
            </action>
          </button>
          <button name="${ui.form.DTRSearchByBarcodeCollectionSchema.section.RootMenu.button.AddToFavorites.name:Добавить в избранное}">
            <properties>
              <hide>
                <condition>true</condition>
              </hide>
            </properties>
            <action>
              <system name="ADD_LINK_TO_FAVORITE_FOLDER"/>
            </action>
          </button>
        </component>
      </section>
    </component>
  </form>
</ui>