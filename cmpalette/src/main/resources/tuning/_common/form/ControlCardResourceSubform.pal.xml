<?xml version='1.0' encoding='UTF-8'?>
<ui xmlns="http://www.intertrust.ru/schema/palette/tn-ui">
  <form schema-ref="ControlCardResource" id="ControlCardResourceSubform" projection="default" group="true">
    <properties>
      <hide condition-union="AND">
        <negative-condition-ref ref="edit"/>
        <negative-condition-ref ref="read"/>
      </hide>
    </properties>
    <component>
      <section id="row_clickable" group="true">
        <properties>
          <hide condition-union="AND">
            <negative-condition-ref ref="ControlCardResource_canOpen"/>
          </hide>
        </properties>
        <component>
          <button name="${ui.form.ControlCardResourceSubform.section.row_clickable.button.NotControl.name:Нет контроля}">
            <properties>
              <hide condition-union="AND">
                <condition-ref ref="ControlCardResource_isControlled"/>
              </hide>
            </properties>
            <appearance>
              <label-style width="10" unit="symbol">
                <style id="tunBold"/>
                <style id="tunBgGray"/>
                <style id="tunNoControl"/>
              </label-style>
            </appearance>
            <action>
              <system name="update"/>
            </action>
          </button>
          <button name="${ui.form.ControlCardResourceSubform.section.row_clickable.button.Control.name:Контроль}">
            <properties>
              <hide condition-union="AND">
                <negative-condition-ref ref="ControlCardResource_isControlled"/>
              </hide>
            </properties>
            <appearance align="left">
              <label-style width="10" unit="symbol">
                <style id="tunBgRed"/>
                <style id="tunWhite"/>
                <style id="tunControl"/>
              </label-style>
            </appearance>
            <action>
              <system name="update"/>
            </action>
          </button>
        </component>
      </section>
      <section id="row_notClickable" group="true">
        <properties>
          <hide condition-union="AND">
            <negative-condition-ref ref="ControlCardResource_notOpened"/>
          </hide>
        </properties>
        <component>
          <button name="${ui.form.ControlCardResourceSubform.section.row_notClickable.button.NotControl.name:Нет контроля}">
            <properties>
              <hide condition-union="AND">
                <condition-ref ref="ControlCardResource_isControlled"/>
              </hide>
            </properties>
            <appearance>
              <label-style width="10" unit="symbol">
                <style id="tunBold"/>
                <style id="tunBgGray"/>
                <style id="tunNoControl"/>
              </label-style>
            </appearance>
          </button>
          <button name="${ui.form.ControlCardResourceSubform.section.row_notClickable.button.Control.name:Контроль}">
            <properties>
              <hide condition-union="AND">
                <negative-condition-ref ref="ControlCardResource_isControlled"/>
              </hide>
            </properties>
            <appearance align="left">
              <label-style width="10" unit="symbol">
                <style id="tunBgRed"/>
                <style id="tunWhite"/>
                <style id="tunControl"/>
              </label-style>
            </appearance>
          </button>
        </component>
      </section>
    </component>
  </form>
</ui>