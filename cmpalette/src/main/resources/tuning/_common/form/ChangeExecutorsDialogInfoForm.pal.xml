<?xml version='1.0' encoding='UTF-8'?>
<ui xmlns="http://www.intertrust.ru/schema/palette/tn-ui">
  <form schema-ref="ChangeExecutorsDialogInfo" id="ChangeExecutorsDialogInfoForm" projection="default" name="${ui.form.ChangeExecutorsDialogInfoForm.name:Информация о замене}">
    <properties>
      <hide condition-union="AND">
        <negative-condition-ref ref="dialog"/>
      </hide>
    </properties>
    <component>
      <field attribute-ref="message">
        <properties>
          <read-only condition-union="AND">
            <condition>true</condition>
          </read-only>
        </properties>
        <appearance importance="normal" multiline="true"/>
      </field>
      <button name="${ui.form.ChangeExecutorsDialogInfoForm.button.Скрыть кнопку сохранить.name:Скрыть кнопку сохранить}">
        <properties>
          <hide condition-union="AND">
            <condition>true</condition>
          </hide>
        </properties>
        <action>
          <system name="submit"/>
        </action>
      </button>
      <button name="${ui.form.ChangeExecutorsDialogInfoForm.button.Ok.name:Ok}">
        <action>
          <system name="cancel"/>
        </action>
      </button>
    </component>
  </form>
</ui>