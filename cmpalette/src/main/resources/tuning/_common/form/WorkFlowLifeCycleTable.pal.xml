<?xml version='1.0' encoding='UTF-8'?>
<ui xmlns="http://www.intertrust.ru/schema/palette/tn-ui">
  <form schema-ref="WorkFlowLifeCycle" id="WorkFlowLifeCycleTable" projection="default">
    <properties>
      <hide condition-union="AND">
        <negative-condition-ref ref="table"/>
      </hide>
    </properties>
    <appearance field-layout="horizontal"/>
    <component>
      <section id="rowStartDate" name="${ui.form.WorkFlowLifeCycleTable.section.rowStartDate.name:Дата начала действия}">
        <component>
          <field attribute-ref="lifecycle_start_date">
            <appearance importance="normal" multiline="true"/>
          </field>
        </component>
      </section>
      <section id="rowFinishDate" name="${ui.form.WorkFlowLifeCycleTable.section.rowFinishDate.name:Дата окончания действия}">
        <component>
          <field attribute-ref="lifecycle_date">
            <appearance importance="normal" multiline="true"/>
          </field>
        </component>
      </section>
      <section id="rowAction" name="${ui.form.WorkFlowLifeCycleTable.section.rowAction.name:Действие}">
        <component>
          <field attribute-ref="lifecycle_action">
            <appearance importance="normal" multiline="true"/>
          </field>
        </component>
      </section>
      <section id="rowAssignee" name="${ui.form.WorkFlowLifeCycleTable.section.rowAssignee.name:Исполнитель}">
        <component>
          <field attribute-ref="lifecycle_executor">
            <appearance importance="normal" multiline="true"/>
          </field>
        </component>
      </section>
      <section id="rowResult" name="${ui.form.WorkFlowLifeCycleTable.section.rowResult.name:Результат}">
        <component>
          <field attribute-ref="lifecycle_result">
            <appearance importance="normal" multiline="true"/>
          </field>
        </component>
      </section>
      <section id="rowInformation" name="${ui.form.WorkFlowLifeCycleTable.section.rowInformation.name:Доп. инфо}">
        <component>
          <field attribute-ref="lifecycle_information">
            <appearance importance="normal" multiline="true"/>
          </field>
        </component>
      </section>
    </component>
  </form>
</ui>