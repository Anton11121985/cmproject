<?xml version='1.0' encoding='UTF-8'?>
<ui xmlns="http://www.intertrust.ru/schema/palette/tn-ui">
  <form schema-ref="RkkResourceMissions" id="RkkResourceMissionsCopyForm" projection="default">
    <properties>
      <hide condition-union="AND">
        <negative-condition-ref ref="copy"/>
      </hide>
    </properties>
    <component>
      <field attribute-ref="title">
        <appearance importance="normal"/>
      </field>
      <field attribute-ref="type" name="${ui.form.RkkResourceMissionsCopyForm.field.type.name:Вид документа:}">
        <appearance importance="normal"/>
        <hint-pop-up>${ui.form.RkkResourceMissionsCopyForm.field.type.hintPopUp:Вид документа}</hint-pop-up>
      </field>
      <field attribute-ref="addressee" name="${ui.form.RkkResourceMissionsCopyForm.field.addressee.name:Список рассылки:}">
        <appearance importance="normal"/>
        <hint-pop-up>${ui.form.RkkResourceMissionsCopyForm.field.addressee.hintPopUp:Список рассылки}</hint-pop-up>
      </field>
      <field attribute-ref="advSigner" name="${ui.form.RkkResourceMissionsCopyForm.field.advSigner.name:Другие подписи:}">
        <appearance importance="normal"/>
        <hint-pop-up>${ui.form.RkkResourceMissionsCopyForm.field.advSigner.hintPopUp:Другие подписи}</hint-pop-up>
      </field>
      <field attribute-ref="comment" name="${ui.form.RkkResourceMissionsCopyForm.field.comment.name:Комментарий:}">
        <appearance importance="normal"/>
        <hint-pop-up>${ui.form.RkkResourceMissionsCopyForm.field.comment.hintPopUp:Комментарий}</hint-pop-up>
      </field>
      <field attribute-ref="disableLinkAccess" name="${ui.form.RkkResourceMissionsCopyForm.field.disableLinkAccess.name:Ограничить доступ по связям}">
        <appearance align="right" importance="normal">
          <label-style field-width="2" field-unit="symbol"/>
        </appearance>
        <hint-in-field>${ui.form.RkkResourceMissionsCopyForm.field.disableLinkAccess.hintInField:Не дается доступ к текущему документу читателям связанных документов}</hint-in-field>
      </field>
      <field attribute-ref="frFile" name="${ui.form.RkkResourceMissionsCopyForm.field.case.name:Дело:}">
        <appearance importance="normal"/>
        <hint-pop-up>${ui.form.RkkResourceMissionsCopyForm.field.case.hintPopUp:Дело}</hint-pop-up>
      </field>
    </component>
  </form>
</ui>