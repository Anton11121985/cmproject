<?xml version='1.0' encoding='UTF-8'?>
<ui xmlns="http://www.intertrust.ru/schema/palette/tn-ui">
  <form schema-ref="RkkResourceInternal" id="RkkResourceInternalCopyForm" projection="default">
    <properties>
      <hide condition-union="AND">
        <negative-condition-ref ref="copy"/>
      </hide>
    </properties>
    <component>
      <field attribute-ref="category" name="${ui.form.RkkResourceInternalCopyForm.field.category.name:Тематика:}">
        <appearance importance="normal"/>
        <hint-pop-up>${ui.form.RkkResourceInternalCopyForm.field.category.hintPopUp:Тематика}</hint-pop-up>
      </field>
      <field autofill="true" attribute-ref="type" name="${ui.form.RkkResourceInternalCopyForm.field.type.name:Вид документа:}">
        <appearance importance="normal"/>
        <hint-pop-up>${ui.form.RkkResourceInternalCopyForm.field.type.hintPopUp:Вид документа}</hint-pop-up>
      </field>
      <field attribute-ref="pages" name="${ui.form.RkkResourceInternalCopyForm.field.pages.name:Кол-во листов:}">
        <appearance importance="normal"/>
        <hint-pop-up>${ui.form.RkkResourceInternalCopyForm.field.pages.hintPopUp:Кол-во листов}</hint-pop-up>
      </field>
      <field attribute-ref="title">
        <appearance importance="normal"/>
      </field>
      <field attribute-ref="copies" name="${ui.form.RkkResourceInternalCopyForm.field.copies.name:Кол-во экземпляров:}">
        <appearance importance="normal"/>
        <hint-pop-up>${ui.form.RkkResourceInternalCopyForm.field.copies.hintPopUp:Кол-во экземпляров}</hint-pop-up>
      </field>
      <field attribute-ref="appendices" name="${ui.form.RkkResourceInternalCopyForm.field.appendices.name:Кол-во приложений:}">
        <appearance importance="normal"/>
        <hint-pop-up>${ui.form.RkkResourceInternalCopyForm.field.appendices.hintPopUp:Кол-во приложений}</hint-pop-up>
      </field>
      <field attribute-ref="advSigner" name="${ui.form.RkkResourceInternalCopyForm.field.advSigner.name:Другие подписи:}">
        <appearance importance="normal"/>
        <hint-pop-up>${ui.form.RkkResourceInternalCopyForm.field.advSigner.hintPopUp:Другие подписи}</hint-pop-up>
      </field>
      <field attribute-ref="appendicesPages" name="${ui.form.RkkResourceInternalCopyForm.field.appendicesPages.name:Листов приложения:}">
        <appearance importance="normal"/>
        <hint-pop-up>${ui.form.RkkResourceInternalCopyForm.field.appendicesPages.hintPopUp:Листов приложения}</hint-pop-up>
      </field>
      <field attribute-ref="executor" name="${ui.form.RkkResourceInternalCopyForm.field.executor.name:Исполнители:}">
        <appearance importance="normal"/>
        <hint-pop-up>${ui.form.RkkResourceInternalCopyForm.field.executor.hintPopUp:Исполнители}</hint-pop-up>
      </field>
      <field attribute-ref="comment" name="${ui.form.RkkResourceInternalCopyForm.field.comment.name:Комментарий:}">
        <appearance importance="normal"/>
        <hint-pop-up>${ui.form.RkkResourceInternalCopyForm.field.comment.hintPopUp:Комментарий}</hint-pop-up>
      </field>
      <field attribute-ref="addressee" name="${ui.form.RkkResourceInternalCopyForm.field.addressee.name:Адресаты:}">
        <appearance importance="normal"/>
        <hint-pop-up>${ui.form.RkkResourceInternalCopyForm.field.addressee.hintPopUp:Адресаты}</hint-pop-up>
      </field>
      <field attribute-ref="disableLinkAccess" name="${ui.form.RkkResourceInternalCopyForm.field.disableLinkAccess.name:Ограничить доступ по связям:}">
        <appearance align="right" importance="normal">
          <label-style field-width="2" field-unit="symbol"/>
        </appearance>
        <hint-in-field>${ui.form.RkkResourceInternalCopyForm.field.disableLinkAccess.hintInField:Не дается доступ к текущему документу читателям связанных документов}</hint-in-field>
      </field>
      <field attribute-ref="$hasContentWithAffirm">
        <appearance importance="normal"/>
      </field>
    </component>
  </form>
</ui>