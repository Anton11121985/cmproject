<?xml version='1.0' encoding='UTF-8'?>
<ui xmlns="http://www.intertrust.ru/schema/palette/tn-ui">
  <form schema-ref="PrintFormNdpFormerSelectDialog" id="PrintFormNdpFormerSelectDialogForm"
        name="${ui.form.PrintFormNdpFormerSelectDialogForm.name:Выберите составителя номенклатуры дел подразделения}" projection="default">
    <properties>
      <hide condition-union="AND">
        <negative-condition-ref ref="dialog"/>
      </hide>
    </properties>
    <component>
      <field attribute-ref="sdObjectInfo" tid="sdObjectInfo"
             name="${ui.form.PrintFormNdpFormerSelectDialogForm.field.sdObjectInfo.name:Выберите составителя номенклатуры дел подразделения}">
        <properties>
          <require condition-union="AND">
            <condition>true</condition>
          </require>
        </properties>
        <appearance open-mode="grid" digest-mode="grid" importance="normal" widget="grid"/>
        <directories limit-livesearch="sys-current" digest="grid">
          <directory-ref ref="nd-ndp-former-for-printform"/>
        </directories>
      </field>
      <button name="${ui.form.PrintFormNdpFormerSelectDialogForm.button.OK.name:Ок}" tid="submit">
        <action>
          <system name="submit"/>
        </action>
      </button>
      <button name="${ui.form.PrintFormNdpFormerSelectDialogForm.button.Cancel.name:Отмена}" tid="cancel">
        <appearance>
          <label-style>
            <style id="tunBtnGray"/>
          </label-style>
        </appearance>
        <action>
          <system name="cancel"/>
        </action>
      </button>
    </component>
  </form>
</ui>