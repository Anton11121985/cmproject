  <form schema-ref="FrPseudoRkkAddSignArray" id="FrPseudoRkkAddSignArrayDialogForm" name="${ui.form.FrPseudoRkkAddSignArrayDialogForm.name:Добавить подписи}" projection="default">
    <meta>
      <category name="Система\Делопроизводство"/>
      <documentation>Диалог добавления подписей в Псевдо РКК</documentation>
    </meta>
    <appearance>
      <dialog-mode height="250" width="100" unit="symbol"/>
    </appearance>
    <properties>
      <hide condition-union="AND">
        <negative-condition-ref ref="dialog"/>
      </hide>
    </properties>
    <component>
      <field attribute-ref="addSign" name="${ui.form.FrPseudoRkkAddSignArrayDialogForm.field.sign.name:Подпись:}">
        <appearance widget="grid"/>
        <directories>
          <directory-ref ref="current_all_with_org_hier"/>
          <directory-ref ref="current_all_with_org"/>
          <directory-ref ref="ALIEN_BEARDS_WITH_ROLES_HIER"/>
          <directory-ref ref="ALIEN_BEARDS"/>
        </directories>
      </field>
      <button name="${ui.form.FrPseudoRkkAddSignArrayDialogForm.button.submit.name:Ок}" tid="submit">
        <action>
          <system name="submit"/>
        </action>
      </button>
      <button name="${ui.form.FrPseudoRkkAddSignArrayDialogForm.button.Cancel.name:Отмена}" tid="cancel">
        <appearance>
          <label-style>
            <style id="tunBtnGray"/>
          </label-style>
        </appearance>
        <action>
          <system name="cancel"/>
        </action>
      </button>
    </component>
  </form>

