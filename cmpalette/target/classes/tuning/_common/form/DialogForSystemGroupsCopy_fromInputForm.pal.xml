<?xml version='1.0' encoding='UTF-8'?>
<ui xmlns="http://www.intertrust.ru/schema/palette/tn-ui">
  <form schema-ref="DialogForSystemGroupsCopy_fromInput" id="DialogForSystemGroupsCopy_fromInputForm" projection="default">
    <properties>
      <hide condition-union="AND">
        <negative-condition-ref ref="dialog"/>
      </hide>
    </properties>
    <component>
      <field attribute-ref="toCopyFrom_InputDocs">
        <appearance importance="normal"/>
        <directories limit-livesearch="sys-current">
          <directory-ref ref="modulesForSystemGroupCopy_fromInput"/>
        </directories>
      </field>
      <button name="${ui.form.DialogForSystemGroupsCopy_fromInputForm.button.OK.name:OK}">
        <action>
          <system name="submit"/>
        </action>
      </button>
      <button name="${ui.form.DialogForSystemGroupsCopy_fromInputForm.button.Отмена.name:Отмена}">
        <action>
          <system name="cancel"/>
        </action>
      </button>
    </component>
  </form>
